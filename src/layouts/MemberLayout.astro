---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const member = Astro.locals.member;

const navItems = [
  { href: '/members', label: 'Dashboard', icon: 'home' },
  { href: '/members/book', label: 'Book Tee Time', icon: 'calendar' },
  { href: '/members/payments', label: 'Payments', icon: 'credit-card' },
  { href: '/members/results', label: 'Results', icon: 'trophy' },
  { href: '/members/handbook', label: 'Handbook', icon: 'book' },
  { href: '/members/documents', label: 'Documents', icon: 'folder' },
  { href: '/members/account', label: 'My Account', icon: 'user' },
];

const currentPath = Astro.url.pathname;

const icons: Record<string, string> = {
  home: '<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/>',
  calendar: '<rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/>',
  'credit-card': '<rect x="1" y="4" width="22" height="16" rx="2" ry="2"/><line x1="1" y1="10" x2="23" y2="10"/>',
  trophy: '<path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>',
  book: '<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>',
  folder: '<path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>',
  user: '<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>',
  logout: '<path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/>',
  menu: '<line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/>',
  close: '<line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>',
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - Members | Alnmouth Village Golf Club</title>
  {description && <meta name="description" content={description} />}
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="layout">
    <!-- Mobile Header -->
    <header class="mobile-header">
      <a href="/" class="logo">AVGC Members</a>
      <button class="menu-toggle" aria-label="Toggle menu" onclick="document.body.classList.toggle('sidebar-open')">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon-menu">
          <Fragment set:html={icons.menu} />
        </svg>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon-close">
          <Fragment set:html={icons.close} />
        </svg>
      </button>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="logo">
          <span class="logo-text">AVGC</span>
          <span class="logo-subtitle">Members Area</span>
        </a>
      </div>

      <div class="member-info">
        <div class="member-avatar">
          {member?.firstName?.charAt(0) || 'M'}
        </div>
        <div class="member-details">
          <span class="member-name">{member?.firstName} {member?.surname}</span>
          <span class="member-email">{member?.email}</span>
        </div>
      </div>

      <nav class="sidebar-nav">
        {navItems.map(item => (
          <a
            href={item.href}
            class={`nav-item ${currentPath === item.href ? 'active' : ''}`}
          >
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <Fragment set:html={icons[item.icon]} />
            </svg>
            <span>{item.label}</span>
          </a>
        ))}
      </nav>

      <div class="sidebar-footer">
        <a href="/" class="nav-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          <span>Main Website</span>
        </a>
        <button class="nav-item logout-btn" onclick="handleLogout()">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <Fragment set:html={icons.logout} />
          </svg>
          <span>Sign Out</span>
        </button>
      </div>
    </aside>

    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" onclick="document.body.classList.remove('sidebar-open')"></div>

    <!-- Main Content -->
    <main class="main">
      <div class="page-header">
        <h1>{title}</h1>
      </div>
      <div class="page-content">
        <slot />
      </div>
    </main>
  </div>

  <script is:inline>
    async function handleLogout() {
      try {
        await fetch('/api/member-auth', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ action: 'logout' })
        });
      } catch (e) {
        // Continue with redirect even if API fails
      }
      window.location.href = '/';
    }
  </script>

  <style>
    :root {
      --primary: #1e5631;
      --primary-dark: #164024;
      --primary-light: #e8f5e9;
      --surface: #f5f5f5;
      --white: #ffffff;
      --text: #1a1a1a;
      --text-light: #666666;
      --border: #e0e0e0;
      --sidebar-width: 260px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--surface);
      color: var(--text);
      min-height: 100vh;
    }

    .layout {
      display: flex;
      min-height: 100vh;
    }

    /* Mobile Header */
    .mobile-header {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      background: var(--primary);
      color: white;
      padding: 0 1rem;
      align-items: center;
      justify-content: space-between;
      z-index: 100;
    }

    .mobile-header .logo {
      color: white;
      text-decoration: none;
      font-weight: 700;
      font-size: 1.1rem;
    }

    .menu-toggle {
      background: none;
      border: none;
      color: white;
      padding: 0.5rem;
      cursor: pointer;
    }

    .menu-toggle svg {
      width: 24px;
      height: 24px;
    }

    .menu-toggle .icon-close {
      display: none;
    }

    .sidebar-open .menu-toggle .icon-menu {
      display: none;
    }

    .sidebar-open .menu-toggle .icon-close {
      display: block;
    }

    /* Sidebar */
    .sidebar {
      width: var(--sidebar-width);
      background: var(--white);
      border-right: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      position: fixed;
      top: 0;
      left: 0;
      bottom: 0;
      z-index: 200;
    }

    .sidebar-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border);
    }

    .sidebar-header .logo {
      text-decoration: none;
      display: flex;
      flex-direction: column;
    }

    .logo-text {
      font-weight: 700;
      font-size: 1.5rem;
      color: var(--primary);
    }

    .logo-subtitle {
      font-size: 0.85rem;
      color: var(--text-light);
    }

    .member-info {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
      background: var(--surface);
      border-bottom: 1px solid var(--border);
    }

    .member-avatar {
      width: 40px;
      height: 40px;
      background: var(--primary);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 1rem;
    }

    .member-details {
      display: flex;
      flex-direction: column;
      min-width: 0;
    }

    .member-name {
      font-weight: 600;
      font-size: 0.9rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .member-email {
      font-size: 0.8rem;
      color: var(--text-light);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .sidebar-nav {
      flex: 1;
      padding: 1rem;
      overflow-y: auto;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      color: var(--text);
      text-decoration: none;
      border-radius: 8px;
      transition: all 0.2s;
      font-size: 0.95rem;
      margin-bottom: 0.25rem;
      background: none;
      border: none;
      width: 100%;
      cursor: pointer;
      text-align: left;
    }

    .nav-item svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
    }

    .nav-item:hover {
      background: var(--surface);
    }

    .nav-item.active {
      background: var(--primary-light);
      color: var(--primary);
      font-weight: 500;
    }

    .sidebar-footer {
      padding: 1rem;
      border-top: 1px solid var(--border);
    }

    .logout-btn:hover {
      background: #fee2e2;
      color: #991b1b;
    }

    .sidebar-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 150;
    }

    /* Main Content */
    .main {
      flex: 1;
      margin-left: var(--sidebar-width);
      min-height: 100vh;
    }

    .page-header {
      background: var(--white);
      border-bottom: 1px solid var(--border);
      padding: 1.5rem 2rem;
    }

    .page-header h1 {
      font-size: 1.5rem;
      font-weight: 600;
    }

    .page-content {
      padding: 2rem;
    }

    /* Mobile Styles */
    @media (max-width: 768px) {
      .mobile-header {
        display: flex;
      }

      .sidebar {
        transform: translateX(-100%);
        transition: transform 0.3s ease;
      }

      .sidebar-open .sidebar {
        transform: translateX(0);
      }

      .sidebar-open .sidebar-overlay {
        display: block;
      }

      .main {
        margin-left: 0;
        padding-top: 60px;
      }

      .page-header {
        padding: 1rem;
      }

      .page-content {
        padding: 1rem;
      }
    }
  </style>
</body>
</html>
