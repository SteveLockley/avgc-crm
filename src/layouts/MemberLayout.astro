---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const member = Astro.locals.member;
const isAdmin = !!Astro.locals.user;

const navItems = [
  { href: '/members', label: 'Dashboard', icon: 'home' },
  { href: '/members/my-golf', label: 'My Golf', icon: 'golf' },
  { href: '/members/book', label: 'Book Tee Time', icon: 'calendar' },
  { href: '/members/payments', label: 'Payments', icon: 'credit-card' },
  { href: '/results', label: 'Results', icon: 'trophy' },
  { href: '/members/handbook', label: 'Handbook', icon: 'book' },
  { href: '/members/documents', label: 'Documents', icon: 'folder' },
  { href: '/members/account', label: 'My Account', icon: 'user' },
];

const currentPath = Astro.url.pathname;

const icons: Record<string, string> = {
  home: '<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/>',
  golf: '<circle cx="12" cy="5" r="2"/><path d="M12 7v8"/><path d="M8 15c0 2.2 1.8 4 4 4s4-1.8 4-4"/><path d="M6 19h12"/>',
  calendar: '<rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/>',
  'credit-card': '<rect x="1" y="4" width="22" height="16" rx="2" ry="2"/><line x1="1" y1="10" x2="23" y2="10"/>',
  trophy: '<path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>',
  book: '<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>',
  folder: '<path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>',
  user: '<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>',
  logout: '<path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/>',
  menu: '<line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/>',
  close: '<line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>',
  shield: '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>',
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - Members | Alnmouth Village Golf Club</title>
  {description && <meta name="description" content={description} />}
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="64x64" href="/favicon.png">
  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="layout">
    <!-- Mobile Header -->
    <header class="mobile-header">
      <a href="/" class="logo">AVGC Members</a>
      <button class="menu-toggle" aria-label="Toggle menu" onclick="document.body.classList.toggle('sidebar-open')">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon-menu">
          <Fragment set:html={icons.menu} />
        </svg>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon-close">
          <Fragment set:html={icons.close} />
        </svg>
      </button>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="logo">
          <span class="logo-text">AVGC</span>
          <span class="logo-subtitle">Members Area</span>
        </a>
      </div>

      <div class="member-info">
        <div class="member-avatar">
          {member?.firstName?.charAt(0) || (isAdmin ? 'A' : 'M')}
        </div>
        <div class="member-details">
          <span class="member-name">{member ? `${member.firstName} ${member.surname}` : (isAdmin ? Astro.locals.user?.name : 'Guest')}</span>
          <span class="member-email">{member?.email || (isAdmin ? 'Admin' : '')}</span>
        </div>
      </div>

      <nav class="sidebar-nav">
        {navItems.map(item => (
          <a
            href={item.href}
            class={`nav-item ${currentPath === item.href ? 'active' : ''}`}
          >
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <Fragment set:html={icons[item.icon]} />
            </svg>
            <span>{item.label}</span>
          </a>
        ))}
      </nav>

      <div class="sidebar-footer">
        {isAdmin && (
          <a href="/admin" class="nav-item nav-admin">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <Fragment set:html={icons.shield} />
            </svg>
            <span>Admin</span>
          </a>
        )}
        <a href="/" class="nav-item">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          <span>Main Website</span>
        </a>
        <button class="nav-item logout-btn" onclick="handleLogout()">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <Fragment set:html={icons.logout} />
          </svg>
          <span>Sign Out</span>
        </button>
      </div>
    </aside>

    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" onclick="document.body.classList.remove('sidebar-open')"></div>

    <!-- Main Content -->
    <main class="main">
      <div class="page-header">
        <h1>{title}</h1>
      </div>
      <div class="page-content">
        <slot />
      </div>
      <footer class="member-footer">
        <div class="footer-cards">
          <span class="footer-cards-label">We accept</span>
          <div class="card-logos">
            <svg viewBox="0 0 750 471" aria-label="Visa" role="img" class="card-logo">
              <rect width="750" height="471" rx="40" fill="#1a1f71"/>
              <path d="M278.2 334.2h-60.6l37.9-233.9h60.6L278.2 334.2z" fill="#fff"/>
              <path d="M524.3 105.2c-12-4.5-30.8-9.4-54.3-9.4-59.8 0-101.9 31.8-102.2 77.3-.3 33.7 30 52.4 53 63.6 23.6 11.4 31.5 18.7 31.5 28.9-.2 15.6-18.9 22.8-36.3 22.8-24.3 0-37.2-3.6-57.1-12.3l-7.8-3.7-8.5 52.6c14.2 6.5 40.4 12.2 67.6 12.5 63.6 0 104.9-31.4 105.3-80 .2-26.7-15.9-47-50.9-63.7-21.2-10.9-34.2-18.1-34.2-29.1.2-9.9 11-20.2 34.8-20.2 19.9-.3 34.3 4.2 45.5 9l5.5 2.7 8.1-51z" fill="#fff"/>
              <path d="M661.6 100.3h-46.8c-14.5 0-25.3 4.2-31.7 19.5L487 334.2h63.6s10.4-28.8 12.7-35.2h77.7c1.8 8.2 7.3 35.2 7.3 35.2H704L661.6 100.3zm-74.9 181.1c5-13.6 24.3-65.8 24.3-65.8-.4.6 5-13.7 8.1-22.6l4.1 20.4s11.7 56.5 14.1 68H586.7z" fill="#fff"/>
              <path d="M232.8 100.3L173.5 261l-6.4-32.5c-11-37.5-45.5-78.1-84-98.4l54.2 204h64L296.8 100.3H232.8z" fill="#fff"/>
              <path d="M120.8 100.3H24.7L24 105c75.9 19.4 126.1 66.2 147 122.5L149 119.9c-3.4-15-14.3-19.3-28.2-19.6z" fill="#f9a533"/>
            </svg>
            <svg viewBox="0 0 750 471" aria-label="Mastercard" role="img" class="card-logo">
              <rect width="750" height="471" rx="40" fill="#000"/>
              <circle cx="299" cy="236" r="148" fill="#eb001b"/>
              <circle cx="451" cy="236" r="148" fill="#f79e1b"/>
              <path d="M375 119.8c37.7 29.8 61.8 76 61.8 127.8S412.7 327 375 356.8c-37.7-29.8-61.8-76-61.8-127.8s24.1-98 61.8-127.8z" fill="#ff5f00"/>
            </svg>
          </div>
        </div>
        <div class="footer-links">
          <a href="/privacy-policy">Privacy Policy</a>
          <a href="/terms">Terms &amp; Conditions</a>
          <a href="/refund-policy">Refund Policy</a>
        </div>
        <p class="footer-company">Alnmouth Village Golf Club Ltd. Company No. 09903211</p>
      </footer>
    </main>
  </div>

  <script is:inline>
    async function handleLogout() {
      try {
        await fetch('/api/member-auth', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ action: 'logout' })
        });
      } catch (e) {
        // Continue with redirect even if API fails
      }
      window.location.href = '/';
    }
  </script>

  <style>
    :root {
      --primary: #1e5631;
      --primary-dark: #164024;
      --primary-light: #e8f5e9;
      --surface: #f5f5f5;
      --white: #ffffff;
      --text: #1a1a1a;
      --text-light: #666666;
      --border: #e0e0e0;
      --sidebar-width: 260px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--surface);
      color: var(--text);
      min-height: 100vh;
    }

    .layout {
      display: flex;
      min-height: 100vh;
    }

    /* Mobile Header */
    .mobile-header {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      background: var(--primary);
      color: white;
      padding: 0 1rem;
      align-items: center;
      justify-content: space-between;
      z-index: 100;
    }

    .mobile-header .logo {
      color: white;
      text-decoration: none;
      font-weight: 700;
      font-size: 1.1rem;
    }

    .menu-toggle {
      background: none;
      border: none;
      color: white;
      padding: 0.5rem;
      cursor: pointer;
    }

    .menu-toggle svg {
      width: 24px;
      height: 24px;
    }

    .menu-toggle .icon-close {
      display: none;
    }

    .sidebar-open .menu-toggle .icon-menu {
      display: none;
    }

    .sidebar-open .menu-toggle .icon-close {
      display: block;
    }

    /* Sidebar */
    .sidebar {
      width: var(--sidebar-width);
      background: var(--white);
      border-right: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      position: fixed;
      top: 0;
      left: 0;
      bottom: 0;
      z-index: 200;
    }

    .sidebar-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border);
    }

    .sidebar-header .logo {
      text-decoration: none;
      display: flex;
      flex-direction: column;
    }

    .logo-text {
      font-weight: 700;
      font-size: 1.5rem;
      color: var(--primary);
    }

    .logo-subtitle {
      font-size: 0.85rem;
      color: var(--text-light);
    }

    .member-info {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
      background: var(--surface);
      border-bottom: 1px solid var(--border);
    }

    .member-avatar {
      width: 40px;
      height: 40px;
      background: var(--primary);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 1rem;
    }

    .member-details {
      display: flex;
      flex-direction: column;
      min-width: 0;
    }

    .member-name {
      font-weight: 600;
      font-size: 0.9rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .member-email {
      font-size: 0.8rem;
      color: var(--text-light);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .sidebar-nav {
      flex: 1;
      padding: 1rem;
      overflow-y: auto;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      color: var(--text);
      text-decoration: none;
      border-radius: 8px;
      transition: all 0.2s;
      font-size: 0.95rem;
      margin-bottom: 0.25rem;
      background: none;
      border: none;
      width: 100%;
      cursor: pointer;
      text-align: left;
    }

    .nav-item svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
    }

    .nav-item:hover {
      background: var(--surface);
    }

    .nav-item.active {
      background: var(--primary-light);
      color: var(--primary);
      font-weight: 500;
    }

    .sidebar-footer {
      padding: 1rem;
      border-top: 1px solid var(--border);
    }

    .logout-btn:hover {
      background: #fee2e2;
      color: #991b1b;
    }

    .nav-admin {
      color: #7c3aed !important;
      background: rgba(139, 92, 246, 0.08);
      border: 1px solid rgba(139, 92, 246, 0.2);
      border-radius: 8px;
      margin-bottom: 0.25rem;
    }

    .nav-admin:hover {
      background: rgba(139, 92, 246, 0.15) !important;
      color: #6d28d9 !important;
    }

    .nav-admin svg {
      color: #7c3aed;
    }

    .sidebar-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 150;
    }

    /* Main Content */
    .main {
      flex: 1;
      margin-left: var(--sidebar-width);
      min-height: 100vh;
    }

    .page-header {
      background: var(--white);
      border-bottom: 1px solid var(--border);
      padding: 1.5rem 2rem;
    }

    .page-header h1 {
      font-size: 1.5rem;
      font-weight: 600;
    }

    .page-content {
      padding: 2rem;
    }

    /* Member Footer */
    .member-footer {
      margin-top: 2rem;
      padding: 1.5rem 2rem;
      border-top: 1px solid var(--border);
    }

    .member-footer .footer-cards {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 0.75rem;
    }

    .member-footer .footer-cards-label {
      font-size: 0.75rem;
      color: #999;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .member-footer .card-logos {
      display: flex;
      gap: 0.5rem;
      align-items: center;
    }

    .member-footer .card-logo {
      width: 44px;
      height: 28px;
      border-radius: 3px;
    }

    .member-footer .footer-links {
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .member-footer .footer-links a {
      color: #999;
      font-size: 0.8rem;
      text-decoration: none;
      transition: color 0.2s;
    }

    .member-footer .footer-links a:hover {
      color: var(--primary);
    }

    .member-footer .footer-company {
      margin-top: 0.5rem;
      font-size: 0.75rem;
      color: #bbb;
    }

    /* Mobile Styles */
    @media (max-width: 768px) {
      .mobile-header {
        display: flex;
      }

      .sidebar {
        transform: translateX(-100%);
        transition: transform 0.3s ease;
      }

      .sidebar-open .sidebar {
        transform: translateX(0);
      }

      .sidebar-open .sidebar-overlay {
        display: block;
      }

      .main {
        margin-left: 0;
        padding-top: 60px;
      }

      .page-header {
        padding: 1rem;
      }

      .page-content {
        padding: 1rem;
      }
    }
  </style>
</body>
</html>
