---
import FAQBot from '../components/public/FAQBot.astro';

interface Props {
  title: string;
  description?: string;
  heroImage?: string;
  heroVideo?: string;
  heroTitle?: string;
  heroSubtitle?: string;
  heroSize?: 'standard' | 'large' | 'fullscreen';
  heroOverlay?: 'light' | 'medium' | 'dark';
  ogImage?: string;
  ogType?: string;
}

const {
  title,
  description,
  heroImage,
  heroVideo,
  heroTitle,
  heroSubtitle,
  heroSize = 'standard',
  heroOverlay = 'medium',
  ogImage,
  ogType,
} = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pageTitle = `${title} | Alnmouth Village Golf Club`;
const pageDescription = description || 'Welcome to Alnmouth Village Golf Club - a stunning links course on the Northumberland coast, established 1869.';
const ogImageUrl = ogImage || heroImage || '/images/hero-course.jpg';
const resolvedOgType = ogType || 'website';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/course', label: 'The Course' },
  { href: '/visitors', label: 'Visitors' },
  { href: '/membership', label: 'Membership' },
  { href: '/clubhouse', label: 'Clubhouse', children: [
    { href: '/clubhouse', label: 'The Clubhouse' },
    { href: '/clubhouse/menus', label: 'Menus' },
  ]},
  { href: '/results', label: 'Results', children: [
    { href: '/results', label: 'Competition Results' },
    { href: '/leaderboard', label: 'Live Leaderboard' },
  ]},
  { href: '/contact', label: 'Contact' },
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};

const hasHero = heroImage || heroVideo || heroTitle;
const isLargeHero = heroSize === 'large' || heroSize === 'fullscreen';
const isAdmin = !!Astro.locals.user;
---

