        <h1 class="hero-title">{heroTitle || title}</h1>
        {heroSubtitle && <p class="hero-subtitle">{heroSubtitle}</p>}
        <slot name="hero-actions">
          {heroSize === 'fullscreen' && (
            <div class="hero-actions">
              <a href="/visitors" class="btn btn-primary btn-large">Plan Your Visit</a>
              <a href="/course" class="btn btn-outline btn-large">Explore the Course</a>
            </div>
          )}
        </slot>
      </div>
      {heroSize === 'fullscreen' && (
        <div class="hero-scroll">
          <span>Scroll to explore</span>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 12 15 18 9"/>
          </svg>
        </div>
      )}
    </section>
  )}

