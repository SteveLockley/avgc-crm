    ))}
    <a href="/members/login" class="mobile-nav-link mobile-nav-cta">Members Area</a>
    {isAdmin && <a href="/admin" class="mobile-nav-link mobile-nav-admin">Admin</a>}
  </nav>

  <!-- Hero Section -->
  {hasHero && (
    <section class={`hero hero-${heroSize} overlay-${heroOverlay}`}>
      {heroVideo ? (
        <>
          <img src={heroImage} alt="" class="hero-media hero-poster" />
          <video class="hero-media hero-video" muted loop playsinline poster={heroImage}>
            <source src={heroVideo} type="video/mp4" />
          </video>
        </>
      ) : heroImage ? (
        <img src={heroImage} alt="" class="hero-media" />
      ) : null}
      <div class="hero-overlay"></div>
      <div class="hero-content">
        {heroSize === 'fullscreen' && (
          <div class="hero-badge">Welcome to</div>
