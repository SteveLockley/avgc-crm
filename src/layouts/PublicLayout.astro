  <slot name="head" />
</head>
<body class={isLargeHero ? 'has-large-hero' : ''}>
  <!-- Header -->
  <header class={`header ${isLargeHero ? 'header-transparent' : ''}`} id="header">
    <div class="header-container">
      <a href="/" class="logo">
        <div class="logo-text">
          <span class="logo-name">Alnmouth Village</span>
          <span class="logo-subtitle">Golf Club Â· Est. 1869</span>
        </div>
      </a>

      <nav class="nav">
        {navItems.map(item => (
          item.children ? (
            <div class="nav-dropdown">
              <a href={item.href} class={`nav-link ${isActive(item.href) ? 'active' : ''}`}>
                {item.label}
                <svg class="nav-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="14" height="14"><polyline points="6 9 12 15 18 9"/></svg>
              </a>
              <div class="nav-dropdown-menu">
                {item.children.map(child => (
                  <a href={child.href} class="nav-dropdown-link">{child.label}</a>
                ))}
              </div>
            </div>
          ) : (
            <a href={item.href} class={`nav-link ${isActive(item.href) ? 'active' : ''}`}>
              {item.label}
            </a>
          )
        ))}
        <a href="/members/login" class="nav-link nav-cta">Members</a>
        {isAdmin && <a href="/admin" class="nav-link nav-admin">Admin</a>}
      </nav>

      <button class="menu-btn" id="menu-btn" aria-label="Toggle menu">
        <span></span>
        <span></span>
