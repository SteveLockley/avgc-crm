      </button>
    </div>
  </header>

  <!-- Mobile Navigation -->
  <nav class="mobile-nav" id="mobile-nav">
    {navItems.map(item => (
      item.children ? (
        <>
          <a href={item.href} class={`mobile-nav-link ${isActive(item.href) ? 'active' : ''}`}>
            {item.label}
          </a>
          {item.children.filter(c => c.href !== item.href).map(child => (
            <a href={child.href} class="mobile-nav-link mobile-nav-sub">{child.label}</a>
          ))}
        </>
      ) : (
        <a href={item.href} class={`mobile-nav-link ${isActive(item.href) ? 'active' : ''}`}>
          {item.label}
