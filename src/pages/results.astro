---
import PublicLayout from '../layouts/PublicLayout.astro';
import {
  isMsbConfigured,
  getClosedCompetitionList,
  getOrdersOfMeritList,
  getEclecticsList,
  getMatchplayList,
  getBestOfList,
} from '../lib/masterscoreboard';

const env = (Astro.locals as any).runtime?.env;
const msbConfigured = isMsbConfigured(env);

let recentResults: any[] = [];
let meritList: any[] = [];
let eclecticsList: any[] = [];
let matchplayList: any[] = [];
let bestofList: any[] = [];
let serverError = '';

if (msbConfigured) {
  try {
    const [resultsData, meritsData, eclecticsData, matchplayData, bestofData] = await Promise.all([
      getClosedCompetitionList(env, { count: 20 }).catch(() => null),
      getOrdersOfMeritList(env).catch(() => null),
      getEclecticsList(env).catch(() => null),
      getMatchplayList(env).catch(() => null),
      getBestOfList(env).catch(() => null),
    ]);

    recentResults = resultsData?.competitions || [];
    meritList = meritsData?.ordersOfMerit || [];
    eclecticsList = eclecticsData?.eclectics || [];
    matchplayList = matchplayData?.competitions || [];
    bestofList = bestofData?.series || [];

    if (!Array.isArray(recentResults)) recentResults = [];
    if (!Array.isArray(meritList)) meritList = [];
    if (!Array.isArray(eclecticsList)) eclecticsList = [];
    if (!Array.isArray(matchplayList)) matchplayList = [];
    if (!Array.isArray(bestofList)) bestofList = [];
  } catch (e: any) {
    serverError = e?.message || 'Failed to load competition data';
  }
}
---

<PublicLayout
  title="Competition Results"
  description="View the latest competition results, orders of merit, eclectics, match play draws and best-of series from Alnmouth Village Golf Club."
  heroImage="/images/hero-course.jpg"
  heroTitle="Competition Results"
  heroSubtitle="View recent results, orders of merit, eclectics, match play and best-of series"
>
  <div class="content">
    <div class="results-page">

      {serverError && (
        <div class="alert alert-warning">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
            <circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
          <span>Unable to load data: {serverError}</span>
        </div>
      )}

      <!-- Main tab bar -->
      <div class="tabs-nav" role="tablist">
        <button class="tab-btn active" role="tab" data-tab="recent" aria-selected="true">Recent Results</button>
        <button class="tab-btn" role="tab" data-tab="merit" aria-selected="false">Orders of Merit</button>
        <button class="tab-btn" role="tab" data-tab="eclectics" aria-selected="false">Eclectics</button>
        <button class="tab-btn" role="tab" data-tab="matchplay" aria-selected="false">Match Play</button>
        <button class="tab-btn" role="tab" data-tab="bestof" aria-selected="false">Best of Series</button>
      </div>

      <!-- Recent Results -->
      <div class="tab-panel active" id="tab-recent" role="tabpanel">
        {recentResults.length > 0 ? (
          <div class="comp-list">
            {recentResults.map((comp: any) => {
              const reports = comp.reports || [];
              const firstReport = reports[0];
              return (
                <button
                  class="comp-card"
                  data-comp-id={comp.compId}
                  data-report-id={firstReport?.reportId || 0}
                  data-reports={reports.length > 1 ? JSON.stringify(reports) : undefined}
                  data-type="results"
                >
                  <div class="comp-date">{comp.date || ''}</div>
                  <div class="comp-info">
                    <span class="comp-name">{comp.name || ''}</span>
                    <span class="comp-winner">
                      {comp.format || ''}{comp.gender ? ` \u2022 ${comp.gender}` : ''}
                      {reports.length > 1 ? ` \u2022 ${reports.length} reports` : ''}
                    </span>
                  </div>
                  <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                    <polyline points="9 18 15 12 9 6"/>
                  </svg>
                </button>
              );
            })}
          </div>
        ) : !serverError && msbConfigured ? (
          <div class="empty-state">No recent results available.</div>
        ) : null}
      </div>

      <!-- Orders of Merit -->
      <div class="tab-panel" id="tab-merit" role="tabpanel">
        {meritList.length > 0 ? (
          <div class="comp-list">
            {meritList.map((m: any) => (
              <button
                class="comp-card"
                data-merit-id={m.oomId}
                data-type="merit"
              >
                <div class="comp-info">
                  <span class="comp-name">{m.name || ''}</span>
                  {m.lastUpdated && (
                    <span class="comp-winner">Last updated: {m.lastUpdated}</span>
                  )}
                </div>
                <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </button>
            ))}
          </div>
        ) : (
          <div class="empty-state">No orders of merit available.</div>
        )}
      </div>

      <!-- Eclectics -->
      <div class="tab-panel" id="tab-eclectics" role="tabpanel">
        {eclecticsList.length > 0 ? (
          <div class="comp-list">
            {eclecticsList.map((e: any) => (
              <button
                class="comp-card"
                data-eclectic-id={e.eclecticId}
                data-type="eclectics"
              >
                <div class="comp-info">
                  <span class="comp-name">{e.name || ''}</span>
                  {e.format && <span class="comp-winner">{e.format}</span>}
                </div>
                <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </button>
            ))}
          </div>
        ) : (
          <div class="empty-state">No eclectics available.</div>
        )}
      </div>

      <!-- Match Play -->
      <div class="tab-panel" id="tab-matchplay" role="tabpanel">
        {matchplayList.length > 0 ? (
          <div class="comp-list">
            {matchplayList.map((m: any) => (
              <button
                class="comp-card"
                data-comp-id={m.compId}
                data-type="matchplay"
              >
                <div class="comp-info">
                  <span class="comp-name">{m.name || ''}</span>
                </div>
                <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </button>
            ))}
          </div>
        ) : (
          <div class="empty-state">No match play competitions available.</div>
        )}
      </div>

      <!-- Best of Series -->
      <div class="tab-panel" id="tab-bestof" role="tabpanel">
        {bestofList.length > 0 ? (
          <div class="comp-list">
            {bestofList.map((b: any) => (
              <button
                class="comp-card"
                data-series-id={b.seriesId}
                data-type="bestof"
              >
                <div class="comp-info">
                  <span class="comp-name">{b.name || ''}</span>
                  {b.lastUpdated && <span class="comp-winner">Last updated: {b.lastUpdated}</span>}
                </div>
                <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </button>
            ))}
          </div>
        ) : (
          <div class="empty-state">No best-of series available.</div>
        )}
      </div>

      <!-- Detail panel (populated via JS) -->
      <div class="detail-panel" id="detail-panel" style="display:none">
        <div class="detail-header">
          <button class="back-btn" id="back-btn">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
            Back to list
          </button>
          <h3 id="detail-title"></h3>
        </div>
        <div class="detail-body" id="detail-body">
          <div class="loading-state">
            <div class="spinner"></div>
            <span>Loading...</span>
          </div>
        </div>
      </div>

      <!-- External link -->
      <div class="external-link">
        <a href="https://www.masterscoreboard.co.uk/ClubIndex.php?CWID=1027" target="_blank" rel="noopener noreferrer" class="btn-secondary-link">
          View on Master Scoreboard
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/>
          </svg>
        </a>
      </div>

      <!-- Competition queries note -->
      <div class="results-note">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/>
        </svg>
        <div>
          <h4>Competition Queries</h4>
          <p>For any questions about competitions or results, please contact the Clubhouse on <a href="tel:01665830370">01665 830370</a>.</p>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    (function() {
      // Tab switching
      var tabs = document.querySelectorAll('.tab-btn');
      var panels = document.querySelectorAll('.tab-panel');
      var detailPanel = document.getElementById('detail-panel');
      var detailBody = document.getElementById('detail-body');
      var detailTitle = document.getElementById('detail-title');
      var backBtn = document.getElementById('back-btn');
      var activeTab = 'recent';
      var backStack = []; // tracks navigation: 'list' or 'reports'

      tabs.forEach(function(btn) {
        btn.addEventListener('click', function() {
          tabs.forEach(function(t) { t.classList.remove('active'); t.setAttribute('aria-selected', 'false'); });
          panels.forEach(function(p) { p.classList.remove('active'); });
          btn.classList.add('active');
          btn.setAttribute('aria-selected', 'true');
          activeTab = btn.dataset.tab;
          document.getElementById('tab-' + activeTab).classList.add('active');
          detailPanel.style.display = 'none';
          backStack = [];
        });
      });

      // Back button
      backBtn.addEventListener('click', function() {
        var from = backStack.pop();
        if (from === 'reports') {
          // Go back to report selector (re-render it)
          var ctx = backBtn._reportCtx;
          if (ctx) {
            renderReportSelector(ctx.compId, ctx.reports, ctx.title);
          } else {
            detailPanel.style.display = 'none';
            document.getElementById('tab-' + activeTab).style.display = '';
          }
        } else {
          detailPanel.style.display = 'none';
          document.getElementById('tab-' + activeTab).style.display = '';
        }
      });

      function renderReportSelector(compId, reports, compTitle) {
        document.getElementById('tab-' + activeTab).style.display = 'none';
        detailPanel.style.display = 'block';
        detailTitle.textContent = compTitle;
        backStack = ['list'];
        // Store context so back button can return here
        backBtn._reportCtx = { compId: compId, reports: reports, title: compTitle };

        var html = '<div class="comp-list">';
        reports.forEach(function(r) {
          html += '<button class="comp-card report-card" data-comp-id="' + compId + '" data-report-id="' + r.reportId + '">';
          html += '<div class="comp-info">';
          html += '<span class="comp-name">' + (r.reportType || 'Report ' + r.reportId) + '</span>';
          html += '</div>';
          html += '<svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20"><polyline points="9 18 15 12 9 6"/></svg>';
          html += '</button>';
        });
        html += '</div>';
        detailBody.innerHTML = html;

        // Attach click handlers to report cards
        detailBody.querySelectorAll('.report-card').forEach(function(card) {
          card.addEventListener('click', function() {
            var rCompId = card.dataset.compId;
            var rReportId = card.dataset.reportId;
            var reportTitle = compTitle + ' \u2013 ' + (card.querySelector('.comp-name')?.textContent || '');
            backStack.push('reports');
            loadResult('/api/msb/results/' + rCompId + '/' + rReportId, 'results', reportTitle);
          });
        });
      }

      function loadResult(url, type, title) {
        detailTitle.textContent = title;
        detailBody.innerHTML = '<div class="loading-state"><div class="spinner"></div><span>Loading...</span></div>';

        fetch(url)
          .then(function(r) { if (!r.ok) throw new Error('Failed'); return r.json(); })
          .then(function(data) { renderDetail(type, data); })
          .catch(function() { detailBody.innerHTML = '<div class="empty-state">Failed to load result. Please try again.</div>'; });
      }

      // Click handlers for competition cards
      document.querySelectorAll('.comp-card').forEach(function(card) {
        card.addEventListener('click', function() {
          var type = card.dataset.type;
          var url, title = card.querySelector('.comp-name')?.textContent || 'Result';

          if (type === 'results') {
            var compId = card.dataset.compId;
            var reportsJson = card.dataset.reports;

            // Multi-report: show report selector
            if (reportsJson) {
              try {
                var reports = JSON.parse(reportsJson);
                renderReportSelector(compId, reports, title);
                return;
              } catch (e) { /* fall through to single report */ }
            }

            var reportId = card.dataset.reportId || '0';
            url = '/api/msb/results/' + compId + '/' + reportId;
          } else if (type === 'merit') {
            url = '/api/msb/merit/' + card.dataset.meritId;
          } else if (type === 'eclectics') {
            url = '/api/msb/eclectics/' + card.dataset.eclecticId;
          } else if (type === 'matchplay') {
            url = '/api/msb/matchplay/' + card.dataset.compId;
          } else if (type === 'bestof') {
            url = '/api/msb/bestof/' + card.dataset.seriesId;
          }

          if (!url) return;

          // Show detail panel, hide list
          document.getElementById('tab-' + activeTab).style.display = 'none';
          detailPanel.style.display = 'block';
          backStack = ['list'];
          backBtn._reportCtx = null;
          loadResult(url, type, title);
        });
      });

      function renderDetail(type, data) {
        var html = '';

        if (type === 'results') {
          // Closed competition result: scores[] with player.name, overallPosition, scores[], placing
          var scores = data.scores || [];
          if (scores.length === 0) {
            detailBody.innerHTML = '<div class="empty-state">No results available.</div>';
            return;
          }
          if (data.dateDescription) html += '<p style="margin:0 0 1rem;color:var(--text-light,#666);font-size:0.85rem">' + data.dateDescription + '</p>';
          html += '<div class="table-wrap"><table class="data-table"><thead><tr><th>Pos</th><th>Player</th><th>Score</th><th>Result</th></tr></thead><tbody>';
          scores.forEach(function(s) {
            if (s.type === 'Partner') return; // Skip partner rows
            var name = s.player ? s.player.name : '';
            var scoreStr = Array.isArray(s.scores) ? s.scores.join(', ') : '';
            if (s.scoreTotal) scoreStr += (scoreStr ? ' = ' : '') + s.scoreTotal;
            html += '<tr><td data-label="Pos">' + (s.overallPosition || '') + '</td>';
            html += '<td data-label="Player">' + name + '</td>';
            html += '<td data-label="Score">' + scoreStr + '</td>';
            html += '<td data-label="Result">' + (s.placing || '') + '</td></tr>';
          });
          html += '</tbody></table></div>';
          if (data.entrants) html += '<p style="margin:1rem 0 0;color:var(--text-light,#666);font-size:0.85rem">' + data.entrants + '</p>';

        } else if (type === 'merit' || type === 'bestof') {
          // Sections with players: position, player.name, total, count
          var sections = data.sections || [];
          if (sections.length === 0) {
            detailBody.innerHTML = '<div class="empty-state">No data available.</div>';
            return;
          }
          if (data.notes && data.notes.length > 0) {
            html += '<div style="margin-bottom:1rem;color:var(--text-light,#666);font-size:0.85rem">' + data.notes.join('<br>') + '</div>';
          }
          sections.forEach(function(sec) {
            if (sec.title) html += '<h4 style="margin:1rem 0 0.5rem">' + sec.title + '</h4>';
            var players = sec.players || [];
            if (players.length === 0) return;
            html += '<div class="table-wrap"><table class="data-table"><thead><tr><th>Pos</th><th>Player</th><th>Total</th><th>Rounds</th></tr></thead><tbody>';
            players.forEach(function(p) {
              var name = p.player ? p.player.name : '';
              var scoresStr = Array.isArray(p.scores) ? p.scores.join(', ') : (p.min !== undefined ? p.min + ' - ' + p.max : '');
              html += '<tr><td data-label="Pos">' + (p.position || '') + '</td>';
              html += '<td data-label="Player">' + name + '</td>';
              html += '<td data-label="Total">' + (p.total || '') + '</td>';
              html += '<td data-label="Rounds">' + (p.count || '') + '</td></tr>';
            });
            html += '</tbody></table></div>';
          });

        } else if (type === 'eclectics') {
          var sections = data.sections || [];
          if (sections.length === 0) {
            detailBody.innerHTML = '<div class="empty-state">No eclectic data available.</div>';
            return;
          }
          if (data.details && data.details.length > 0) {
            html += '<div style="margin-bottom:1rem;color:var(--text-light,#666);font-size:0.85rem">' + data.details.join('<br>') + '</div>';
          }
          var isStableford = data.isStablefordScoring;
          sections.forEach(function(sec) {
            if (sec.title) html += '<h4 style="margin:1rem 0 0.5rem">' + sec.title + '</h4>';
            var players = sec.players || [];
            if (players.length === 0) return;
            if (isStableford) {
              html += '<div class="table-wrap"><table class="data-table"><thead><tr><th>Pos</th><th>Player</th><th>Points</th></tr></thead><tbody>';
            } else {
              html += '<div class="table-wrap"><table class="data-table"><thead><tr><th>Pos</th><th>Player</th><th>Gross</th><th>Hcap</th><th>Net</th></tr></thead><tbody>';
            }
            players.forEach(function(p) {
              var name = p.player ? p.player.name : '';
              html += '<tr><td data-label="Pos">' + (p.position || '') + '</td>';
              html += '<td data-label="Player">' + name + '</td>';
              if (isStableford) {
                html += '<td data-label="Points">' + (p.points || '') + '</td>';
              } else {
                html += '<td data-label="Gross">' + (p.gross || '') + '</td>';
                html += '<td data-label="Hcap">' + (p.hcap || '') + '</td>';
                html += '<td data-label="Net">' + (p.net || '') + '</td>';
              }
              html += '</tr>';
            });
            html += '</tbody></table></div>';
          });

        } else if (type === 'matchplay') {
          // rounds[] with title, matches[]
          var rounds = data.rounds || [];
          if (rounds.length === 0) {
            detailBody.innerHTML = '<div class="empty-state">No match play data available.</div>';
            return;
          }
          rounds.forEach(function(round) {
            html += '<h4 style="margin:1rem 0 0.5rem">' + (round.title || 'Round') + '</h4>';
            if (round.playDate) html += '<p style="margin:0 0 0.5rem;color:var(--text-light,#666);font-size:0.85rem">' + (round.isPlayOnDate ? 'Play on: ' : 'Complete by: ') + round.playDate + '</p>';
            var matches = round.matches || [];
            if (matches.length === 0) return;
            html += '<div class="table-wrap"><table class="data-table"><thead><tr><th>#</th><th>Player/Team 1</th><th>vs</th><th>Player/Team 2</th><th>Result</th></tr></thead><tbody>';
            matches.forEach(function(m) {
              var s1 = m.side1 && m.side1.isBye ? 'BYE' : (m.side1 && m.side1.player1 ? m.side1.player1.name : '');
              var s2 = m.side2 && m.side2.isBye ? 'BYE' : (m.side2 && m.side2.player1 ? m.side2.player1.name : '');
              var result = Array.isArray(m.matchResult) && m.matchResult.length > 0 ? m.matchResult.join(', ') : '';
              html += '<tr><td data-label="#">' + (m.matchNumber || '') + '</td>';
              html += '<td data-label="Player 1">' + s1 + '</td>';
              html += '<td data-label="vs">vs</td>';
              html += '<td data-label="Player 2">' + s2 + '</td>';
              html += '<td data-label="Result">' + result + '</td></tr>';
            });
            html += '</tbody></table></div>';
          });
        }

        if (!html) {
          detailBody.innerHTML = '<div class="empty-state">No detailed data available for this competition.</div>';
          return;
        }
        detailBody.innerHTML = html;
      }
    })();
  </script>

  <style>
    .results-page {
      max-width: 1000px;
      margin: 0 auto;
    }

    /* Alerts */
    .alert {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      padding: 1rem 1.25rem;
      border-radius: 12px;
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
    }

    .alert svg { flex-shrink: 0; margin-top: 1px; }

    .alert-warning {
      background: #fff8e1;
      border: 1px solid #ffe082;
      color: #6d4c00;
    }

    /* Tabs */
    .tabs-nav {
      display: flex;
      background: var(--white, #fff);
      border: 1px solid var(--border, #e0e0e0);
      border-radius: 12px;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      margin-bottom: 1.5rem;
    }

    .tabs-nav::-webkit-scrollbar { display: none; }

    .tab-btn {
      flex-shrink: 0;
      padding: 0.875rem 1.25rem;
      border: none;
      background: none;
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--text-light, #666);
      cursor: pointer;
      border-bottom: 2px solid transparent;
      transition: all 0.2s;
      white-space: nowrap;
      min-height: 44px;
    }

    .tab-btn:hover {
      color: var(--primary, #1e5631);
      background: var(--primary-light, #e8f5e9);
    }

    .tab-btn.active {
      color: var(--primary, #1e5631);
      border-bottom-color: var(--primary, #1e5631);
      font-weight: 600;
    }

    .tab-panel {
      display: none;
    }

    .tab-panel.active {
      display: block;
    }

    /* Competition list */
    .comp-list {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .comp-card {
      display: flex;
      align-items: center;
      gap: 1rem;
      background: var(--white, #fff);
      border: 1px solid var(--border, #e0e0e0);
      border-radius: 12px;
      padding: 1rem 1.25rem;
      cursor: pointer;
      transition: all 0.2s;
      text-align: left;
      width: 100%;
      font-family: inherit;
      font-size: inherit;
      min-height: 44px;
    }

    .comp-card:hover {
      border-color: var(--primary, #1e5631);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .comp-date {
      font-weight: 600;
      font-size: 0.85rem;
      color: var(--primary, #1e5631);
      white-space: nowrap;
      min-width: 90px;
    }

    .comp-info {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 0.15rem;
      min-width: 0;
    }

    .comp-name {
      font-weight: 500;
      font-size: 0.9rem;
    }

    .comp-winner {
      font-size: 0.8rem;
      color: var(--text-light, #666);
    }

    .chevron {
      flex-shrink: 0;
      color: var(--text-light, #666);
    }

