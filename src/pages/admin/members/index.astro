              <line x1="21" y1="21" x2="16.65" y2="16.65"/>
            </svg>
            <input
              type="text"
              name="search"
              class="filter-input"
              placeholder="Name or email..."
              value={search}
            />
          </div>
        </div>

        <div class="filter-group">
          <label class="filter-label">Subscription Type</label>
          <select name="subscription_type" class="filter-select">
            <option value="">All Types</option>
            {subscriptionTypes.map(st => (
              <option value={st} selected={subscriptionType === st}>{st}</option>
            ))}
          </select>
        </div>

        <div class="filter-group">
          <label class="filter-label">EGU Category</label>
          <select name="egu_category" class="filter-select">
            <option value="">All EGU Categories</option>
            {EGU_CATEGORIES.map(cat => (
              <option value={cat} selected={eguCategory === cat}>{cat}</option>
            ))}
          </select>
        </div>

        <div class="filter-group">
          <label class="filter-label">Status</label>
          <select name="filter" class="filter-select">
            <option value="">All Statuses</option>
            <option value="active" selected={filter === 'active'}>Active</option>
            <option value="expiring" selected={filter === 'expiring'}>Expiring Soon</option>
            <option value="expired" selected={filter === 'expired'}>Expired</option>
          </select>
        </div>

        <div class="filter-actions">
          <button type="submit" class="btn btn-primary">Search</button>
          <a href="/admin/members" class="btn btn-secondary">Clear</a>
        </div>
      </div>
    </form>

    <!-- Active filters -->
    {(subscriptionType || eguCategory || filter || search) && (
      <div class="active-filters">
        <span class="filters-label">Active filters:</span>
        {search && <span class="filter-tag">Search: {search}</span>}
        {subscriptionType && <span class="filter-tag">Type: {subscriptionType}</span>}
        {eguCategory && <span class="filter-tag">EGU: {eguCategory}</span>}
        {filter && <span class="filter-tag">Status: {filter}</span>}
      </div>
    )}
  </div>

  <!-- Members Table Card -->
  <div class="table-card">
    <div class="table-container">
      <table class="m3-table">
        <thead>
          <tr>
            <th><a href={buildSortUrl('name')} class="sort-header">Name{getSortIndicator('name')}</a></th>
            <th><a href={buildSortUrl('category')} class="sort-header">Subscription{getSortIndicator('category')}</a></th>
            <th class="center-col"><a href={buildSortUrl('home_away')} class="sort-header">H/A{getSortIndicator('home_away')}</a></th>
            <th class="center-col"><a href={buildSortUrl('handicap')} class="sort-header">HCP{getSortIndicator('handicap')}</a></th>
            <th><a href={buildSortUrl('expires')} class="sort-header">Expires{getSortIndicator('expires')}</a></th>
            <th class="right-col"><a href={buildSortUrl('balance')} class="sort-header">Balance{getSortIndicator('balance')}</a></th>
            <th><a href={buildSortUrl('notes')} class="sort-header">Notes{getSortIndicator('notes')}</a></th>
            <th class="actions-col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {members.results?.map((member) => (
            <tr>
              <td class="name-cell">
                <a href={`/admin/members/${member.id}`} class="member-name">
                  {member.surname}, {member.first_name}
                </a>
                {member.email && (
                  <span class="member-email">{member.email}</span>
