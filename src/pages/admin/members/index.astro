  <script is:inline define:vars={{ sortBy, sortDir }}>
    // Store current sort in localStorage for persistence
    if (sortBy || sortDir) {
      localStorage.setItem('memberListSort', JSON.stringify({ sort: sortBy, dir: sortDir }));
    }

    // On page load, check if we should apply stored sort
    (function() {
      const url = new URL(window.location.href);
      const hasSort = url.searchParams.has('sort');

      // If no sort in URL, check localStorage and redirect
      if (!hasSort) {
        const stored = localStorage.getItem('memberListSort');
        if (stored) {
          try {
            const { sort, dir } = JSON.parse(stored);
            if (sort && sort !== 'surname') {
              url.searchParams.set('sort', sort);
              if (dir) url.searchParams.set('dir', dir);
              window.location.replace(url.toString());
            }
          } catch (e) {}
        }
      }
    })();
  </script>

  <script is:inline>
    async function deleteMember(id, name) {
      const confirmed = await m3Confirm(
        `This will permanently delete ${name} and all their payments, invoices, and subscription history.`,
        {
          title: 'Delete Member?',
          type: 'delete',
          confirmText: 'Delete',
          cancelText: 'Cancel',
          danger: true
        }
      );

      if (!confirmed) return;

      try {
        const response = await fetch(`/api/members/${id}`, { method: 'DELETE' });
        const data = await response.json();

        if (data.success) {
          location.reload();
        } else {
          await m3Alert('Delete failed: ' + (data.error || 'Unknown error'), { title: 'Error', type: 'error' });
        }
      } catch (error) {
        await m3Alert('Delete failed: ' + error.message, { title: 'Error', type: 'error' });
      }
    }
  </script>
