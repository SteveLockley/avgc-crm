                    <>
                      <input type="hidden" name="member_id" value={preselectedMember.id} />
                      <input type="text" class="form-input" readonly
                             value={`${preselectedMember.surname}, ${preselectedMember.first_name}`} />
                    </>
                  ) : (
                    <select name="member_id" id="member_id" class="form-input" required onchange="window.location.href=`/payments/new?member_id=${this.value}`">
                      <option value="">Select member...</option>
                      {membersWithInvoices.results?.map((m: any) => (
                        <option value={m.id}>
                          {m.surname}, {m.first_name} ({m.outstanding_count} invoice{m.outstanding_count > 1 ? 's' : ''})
                        </option>
                      ))}
                    </select>
                  )}
                </td>
              </tr>

              {preselectedMember && outstandingInvoices.length > 0 && (
                <>
                  <tr>
                    <td style="padding: 0.75rem 0; vertical-align: top;">
                      <label class="form-label" for="invoice_id">Invoice *</label>
                    </td>
                    <td style="padding: 0.75rem 0;">
                      {outstandingInvoices.length === 1 ? (
                        <>
                          <input type="hidden" name="invoice_id" value={outstandingInvoices[0].id} />
                          <input type="text" class="form-input" readonly
                                 value={`${outstandingInvoices[0].invoice_number} - ${formatCurrency(outstandingInvoices[0].total)}`} />
                        </>
                      ) : (
                        <select name="invoice_id" id="invoice_id" class="form-input" required
                                onchange="window.location.href=`/payments/new?member_id=${preselectedMemberId}&invoice_id=${this.value}`">
                          {outstandingInvoices.map((inv: any) => (
                            <option value={inv.id} selected={selectedInvoice?.id === inv.id}>
                              {inv.invoice_number} - {formatCurrency(inv.total)} ({formatDate(inv.invoice_date)})
                            </option>
                          ))}
                        </select>
                      )}
                    </td>
                  </tr>

                  <tr>
                    <td style="padding: 0.75rem 0; vertical-align: top;">
                      <label class="form-label" for="amount">Amount (Â£) *</label>
                    </td>
                    <td style="padding: 0.75rem 0;">
                      <input type="number" step="0.01" name="amount" id="amount" class="form-input" required
                             value={selectedInvoice?.total || ''} />
                    </td>
                  </tr>

                  <tr>
                    <td style="padding: 0.75rem 0; vertical-align: top;">
                      <label class="form-label" for="payment_date">Payment Date *</label>
                    </td>
                    <td style="padding: 0.75rem 0;">
                      <input type="date" name="payment_date" id="payment_date" class="form-input" required
                             value={defaultPaymentDate} />
                    </td>
                  </tr>

                  <tr>
                    <td style="padding: 0.75rem 0; vertical-align: top;">
                      <label class="form-label" for="payment_method">Payment Method</label>
                    </td>
                    <td style="padding: 0.75rem 0;">
                      <select name="payment_method" id="payment_method" class="form-input">
                        <option value="">-</option>
                        {PAYMENT_METHODS.map(pm => (
                          <option value={pm} selected={preselectedMember?.default_payment_method === pm}>{pm}</option>
                        ))}
                      </select>
                    </td>
                  </tr>

                  <tr>
                    <td colspan="2" style="padding: 0.75rem 0;">
                      <label class="form-label" for="notes">Notes</label>
                      <textarea
                        name="notes"
                        id="notes"
                        class="form-input"
                        rows="2"
                        style="width: 100%;"
                        placeholder="Optional notes about this payment..."
                        onfocus="if(this.value === this.placeholder) this.value = ''"
                        onblur="if(this.value === '') this.value = ''"
                      ></textarea>
                    </td>
                  </tr>
                </>
              )}

              {preselectedMember && outstandingInvoices.length === 0 && (
                <tr>
                  <td colspan="2" style="padding: 2rem; text-align: center; color: #666;">
                    <p>No outstanding invoices for this member.</p>
                    <p style="margin-top: 1rem;">
                      <a href={`/invoices/generate?member_id=${preselectedMember.id}`} class="btn btn-primary btn-sm">
                        Generate Invoice
                      </a>
                    </p>
                  </td>
                </tr>
              )}
            </tbody>
          </table>

          {preselectedMember && outstandingInvoices.length > 0 && (
            <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
              <button type="button" onclick="handleBack()" class="btn btn-secondary">
                Cancel
              </button>
              <button type="submit" class="btn btn-primary">Record Payment</button>
            </div>
          )}
        </form>
      )}
    </div>

    <!-- Invoice Preview -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Invoice Preview</h3>
        {selectedInvoice && (
          <span class={`badge ${getInvoiceStatusBadge(selectedInvoice.status)}`}>
            {selectedInvoice.status.toUpperCase()}
          </span>
        )}
      </div>

      {selectedInvoice ? (
        <div>
          <div style="margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid #ddd;">
            <p style="margin: 0 0 0.5rem 0;">
              <strong>Invoice Number:</strong>
              <a href={`/invoices/${selectedInvoice.id}`} style="font-weight: 600;">
                {selectedInvoice.invoice_number}
              </a>
            </p>
            <p style="margin: 0 0 0.5rem 0;">
              <strong>Invoice Date:</strong> {formatDate(selectedInvoice.invoice_date)}
            </p>
            <p style="margin: 0;">
              <strong>Period:</strong> {formatInvoicePeriod(selectedInvoice.period_start, selectedInvoice.period_end)}
            </p>
          </div>

          <!-- Line Items -->
          <table style="width: 100%; font-size: 0.875rem;">
            <thead>
              <tr style="background: #f8f9fa;">
                <th style="text-align: left; padding: 0.5rem;">Description</th>
                <th style="text-align: right; padding: 0.5rem;">Amount</th>
              </tr>
            </thead>
            <tbody>
              {selectedInvoiceItems.map((item: any) => (
                <tr>
                  <td style="padding: 0.5rem; border-bottom: 1px solid #eee;">{item.description}</td>
                  <td style="padding: 0.5rem; border-bottom: 1px solid #eee; text-align: right;">
                    {formatCurrency(item.line_total)}
                  </td>
                </tr>
              ))}
            </tbody>
            <tfoot>
              <tr style="background: #1e5631; color: white;">
                <td style="padding: 0.75rem; font-weight: 600;">Total</td>
                <td style="padding: 0.75rem; text-align: right; font-weight: 700; font-size: 1rem;">
                  {formatCurrency(selectedInvoice.total)}
                </td>
              </tr>
            </tfoot>
          </table>

          <div style="margin-top: 1rem;">
            <a href={`/invoices/${selectedInvoice.id}`} class="btn btn-secondary btn-sm">
              View Full Invoice
            </a>
          </div>
        </div>
      ) : preselectedMember ? (
        <div style="padding: 2rem; text-align: center; color: #666;">
          {outstandingInvoices.length === 0 ? (
            <p>No outstanding invoices to display.</p>
          ) : (
            <p>Select an invoice to see preview.</p>
          )}
        </div>
      ) : (
        <div style="padding: 2rem; text-align: center; color: #666;">
          <p>Select a member to see their outstanding invoices.</p>
        </div>
      )}
    </div>
  </div>

  <!-- M3 Unsaved Changes Dialog -->
