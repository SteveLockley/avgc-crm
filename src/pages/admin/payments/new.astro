---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { PAYMENT_METHODS, formatCurrency, formatDate, formatInvoicePeriod, getInvoiceStatusBadge, type Invoice, type InvoiceItem, type Member, type InvoiceSetting } from '../../../lib/db';
import { generateInvoiceEmail } from '../../../lib/email-template';

const db = Astro.locals.runtime.env.DB;

const url = Astro.url;
const preselectedMemberId = url.searchParams.get('member_id') || '';
const preselectedInvoiceId = url.searchParams.get('invoice_id') || '';

let error = '';
let preselectedMember: any = null;
let outstandingInvoices: any[] = [];
let selectedInvoice: any = null;
let selectedInvoiceItems: any[] = [];

// Get invoice settings for default payment date
const settingsResult = await db.prepare(
  `SELECT * FROM invoice_settings`
).all();
const settings: Record<string, string> = {};
settingsResult.results?.forEach((row: any) => {
  settings[row.setting_key] = row.setting_value;
});

// Calculate default payment date (start of current subscription period)
const now = new Date();
const periodStartMonth = parseInt(settings.period_start_month || '4') - 1; // 0-indexed
const periodStartDay = parseInt(settings.period_start_day || '1');
let defaultPaymentDate: string;

// If we're before the period start, use last year's period start
if (now.getMonth() < periodStartMonth || (now.getMonth() === periodStartMonth && now.getDate() < periodStartDay)) {
  defaultPaymentDate = `${now.getFullYear() - 1}-${String(periodStartMonth + 1).padStart(2, '0')}-${String(periodStartDay).padStart(2, '0')}`;
} else {
  defaultPaymentDate = `${now.getFullYear()}-${String(periodStartMonth + 1).padStart(2, '0')}-${String(periodStartDay).padStart(2, '0')}`;
}

// Get preselected member if provided
if (preselectedMemberId) {
  preselectedMember = await db.prepare(
    'SELECT id, first_name, surname, default_payment_method FROM members WHERE id = ?'
  ).bind(preselectedMemberId).first();

  if (preselectedMember) {
    // Get outstanding invoices for this member (sent but not paid, oldest first)
    const invoicesResult = await db.prepare(
      `SELECT * FROM invoices
       WHERE member_id = ? AND status = 'sent'
       ORDER BY invoice_date ASC`
    ).bind(preselectedMemberId).all();
    outstandingInvoices = invoicesResult.results || [];

    // If an invoice is preselected, load it
    if (preselectedInvoiceId) {
      selectedInvoice = outstandingInvoices.find((inv: any) => inv.id === parseInt(preselectedInvoiceId));
    } else if (outstandingInvoices.length > 0) {
      // Default to the oldest outstanding invoice
      selectedInvoice = outstandingInvoices[0];
    }

    // Get invoice items for the selected invoice
    if (selectedInvoice) {
      const itemsResult = await db.prepare(
        `SELECT ii.*, pi.name as payment_item_name
         FROM invoice_items ii
         LEFT JOIN payment_items pi ON ii.payment_item_id = pi.id
         WHERE ii.invoice_id = ?
         ORDER BY ii.id`
      ).bind(selectedInvoice.id).all();
      selectedInvoiceItems = itemsResult.results || [];
    }
  }
}

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();

  const memberId = formData.get('member_id');
  const invoiceId = formData.get('invoice_id');
  const amount = parseFloat(formData.get('amount')?.toString() || '0');
  const paymentDate = formData.get('payment_date');
  const paymentMethod = formData.get('payment_method');
  const notes = formData.get('notes');

  if (!memberId || !invoiceId || !amount || !paymentDate) {
    error = 'Please select a member and invoice';
  } else {
    try {
      // Get the invoice to get its details
      const invoice = await db.prepare(
        'SELECT * FROM invoices WHERE id = ?'
      ).bind(invoiceId).first<Invoice>();

      if (!invoice) {
        error = 'Invoice not found';
      } else {
        // Insert payment with invoice reference
        const paymentResult = await db.prepare(
          `INSERT INTO payments (member_id, invoice_id, amount, payment_date, payment_method, payment_type, reference, notes, recorded_by)
           VALUES (?, ?, ?, ?, ?, 'subscription', ?, ?, ?)`
        ).bind(
          memberId,
          invoiceId,
          amount,
          paymentDate,
          paymentMethod || null,
          invoice.invoice_number, // Use invoice number as reference
          notes || null,
          Astro.locals.user?.email || 'system'
        ).run();

        // Get the payment ID
        const paymentId = paymentResult.meta.last_row_id;

        // Get invoice items and create payment line items for each
        const invoiceItems = await db.prepare(
          `SELECT id, payment_item_id, description, line_total
           FROM invoice_items WHERE invoice_id = ?`
        ).bind(invoiceId).all();

        // Insert payment line items for each invoice item
        for (const item of (invoiceItems.results || []) as any[]) {
          await db.prepare(
            `INSERT INTO payment_line_items (payment_id, invoice_item_id, payment_item_id, description, amount)
             VALUES (?, ?, ?, ?, ?)`
          ).bind(
            paymentId,
            item.id,
            item.payment_item_id,
            item.description,
            item.line_total
          ).run();
        }

        // Mark invoice as paid
        await db.prepare(
          `UPDATE invoices SET status = 'paid', updated_at = datetime('now') WHERE id = ?`
        ).bind(invoiceId).run();

        // Log the action
        await db.prepare(
          `INSERT INTO audit_log (user_email, action, entity_type, entity_id, details)
           VALUES (?, 'payment_recorded', 'invoice', ?, ?)`
        ).bind(
          Astro.locals.user?.email || 'system',
          invoiceId,
          JSON.stringify({ amount, payment_method: paymentMethod, invoice_number: invoice.invoice_number })
        ).run();

        // Redirect back to member or payments list
        if (preselectedMemberId) {
          return Astro.redirect(`/admin/members/${preselectedMemberId}?payment_recorded=1`);
        }
        return Astro.redirect('/admin/payments?payment_recorded=1');
      }
    } catch (e: any) {
      error = `Failed to record payment: ${e.message}`;
    }
  }
}

// Get members for dropdown (only those with outstanding invoices)
const membersWithInvoices = await db.prepare(
  `SELECT DISTINCT m.id, m.first_name, m.surname, m.default_payment_method,
          COUNT(i.id) as outstanding_count
   FROM members m
   JOIN invoices i ON m.id = i.member_id AND i.status = 'sent'
   GROUP BY m.id
   ORDER BY m.surname, m.first_name`
).all();
---

<AdminLayout title="Record Payment">
  <div class="edit-page">
    <!-- Header -->
    <div class="page-header">
      <div class="header-left">
        <button type="button" id="back-btn" class="back-btn">&larr;</button>
        <div>
          <h1>Record Payment</h1>
          {preselectedMember && <p class="subtitle">{preselectedMember.first_name} {preselectedMember.surname}</p>}
        </div>
      </div>
      <div class="header-actions">
        <button type="button" id="cancel-btn" class="btn btn-secondary">Cancel</button>
        {preselectedMember && outstandingInvoices.length > 0 && (
          <button type="submit" form="payment-form" class="btn btn-primary">Record Payment</button>
        )}
      </div>
    </div>

    {error && <div class="alert alert-error">{error}</div>}

    <div class="form-grid">
      <!-- Payment Form -->
      <div class="form-column">
        <div class="m3-card accent-card">
          <h2>Invoice Payment</h2>

          {(!membersWithInvoices.results || membersWithInvoices.results.length === 0) && !preselectedMember ? (
            <div class="empty-state">
              <p>No members have outstanding invoices.</p>
              <p style="margin-top: 1rem;">
                <a href="/admin/invoices" class="btn btn-primary">View Invoices</a>
              </p>
            </div>
          ) : (
            <form method="POST" id="payment-form">
              <div class="field">
                <label for="member_id">Member *</label>
                {preselectedMember ? (
                  <>
                    <input type="hidden" name="member_id" value={preselectedMember.id} />
                    <input type="text" readonly
                           value={`${preselectedMember.surname}, ${preselectedMember.first_name}`} />
                  </>
                ) : (
                  <select name="member_id" id="member_id" required onchange={`window.location.href='/admin/payments/new?member_id='+this.value`}>
                    <option value="">Select member...</option>
                    {membersWithInvoices.results?.map((m: any) => (
                      <option value={m.id}>
                        {m.surname}, {m.first_name} ({m.outstanding_count} invoice{m.outstanding_count > 1 ? 's' : ''})
                      </option>
                    ))}
                  </select>
                )}
              </div>

              {preselectedMember && outstandingInvoices.length > 0 && (
                <>
                  <div class="field">
                    <label for="invoice_id">Invoice *</label>
                    {outstandingInvoices.length === 1 ? (
                      <>
                        <input type="hidden" name="invoice_id" value={outstandingInvoices[0].id} />
                        <input type="text" readonly
                               value={`${outstandingInvoices[0].invoice_number} - ${formatCurrency(outstandingInvoices[0].total)}`} />
                      </>
                    ) : (
                      <select name="invoice_id" id="invoice_id" required>
                        {outstandingInvoices.map((inv: any) => (
                          <option value={inv.id} selected={selectedInvoice?.id === inv.id}>
                            {inv.invoice_number} - {formatCurrency(inv.total)} ({formatDate(inv.invoice_date)})
                          </option>
                        ))}
                      </select>
                    )}
                  </div>

                  <div class="field-row two-col">
                    <div class="field">
                      <label for="amount">Amount (&pound;) *</label>
                      <input type="number" step="0.01" name="amount" id="amount" required
                             value={selectedInvoice?.total || ''} />
                    </div>
                    <div class="field">
                      <label for="payment_date">Payment Date *</label>
                      <input type="date" name="payment_date" id="payment_date" required
                             value={defaultPaymentDate} />
                    </div>
                  </div>

                  <div class="field">
                    <label for="payment_method">Payment Method</label>
                    <select name="payment_method" id="payment_method">
                      <option value="">-</option>
                      {PAYMENT_METHODS.map(pm => (
                        <option value={pm} selected={preselectedMember?.default_payment_method === pm}>{pm}</option>
                      ))}
                    </select>
                  </div>

                  <div class="field">
                    <label for="notes">Notes</label>
                    <textarea name="notes" id="notes" rows="2" placeholder="Optional notes about this payment..."></textarea>
                  </div>
                </>
              )}

              {preselectedMember && outstandingInvoices.length === 0 && (
                <div class="empty-state">
                  <p>No outstanding invoices for this member.</p>
                  <p style="margin-top: 1rem;">
                    <a href={`/admin/invoices/generate?member_id=${preselectedMember.id}`} class="btn btn-primary btn-sm">
                      Generate Invoice
                    </a>
                  </p>
                </div>
              )}
            </form>
          )}
        </div>

        <!-- Bottom Actions (mobile) -->
        {preselectedMember && outstandingInvoices.length > 0 && (
          <div class="mobile-actions">
            <button type="button" id="cancel-btn-bottom" class="btn btn-secondary">Cancel</button>
            <button type="submit" form="payment-form" class="btn btn-primary">Record Payment</button>
          </div>
        )}
      </div>

      <!-- Invoice Preview -->
      <div class="form-column">
        <div class="m3-card">
          <div class="preview-header">
            <h2>Invoice Preview</h2>
            {selectedInvoice && (
              <span class={`badge ${getInvoiceStatusBadge(selectedInvoice.status)}`}>
                {selectedInvoice.status.toUpperCase()}
              </span>
            )}
          </div>

          {selectedInvoice ? (
            <div>
              <div class="invoice-meta">
                <p>
                  <strong>Invoice Number:</strong>
                  <a href={`/admin/invoices/${selectedInvoice.id}`}>{selectedInvoice.invoice_number}</a>
                </p>
                <p>
                  <strong>Invoice Date:</strong> {formatDate(selectedInvoice.invoice_date)}
                </p>
                <p>
                  <strong>Period:</strong> {formatInvoicePeriod(selectedInvoice.period_start, selectedInvoice.period_end)}
                </p>
              </div>

              <!-- Line Items -->
              <table class="invoice-table">
                <thead>
                  <tr>
                    <th style="text-align: left;">Description</th>
                    <th style="text-align: right;">Amount</th>
                  </tr>
                </thead>
                <tbody>
                  {selectedInvoiceItems.map((item: any) => (
                    <tr>
                      <td>{item.description}</td>
                      <td style="text-align: right;">{formatCurrency(item.line_total)}</td>
                    </tr>
                  ))}
                </tbody>
                <tfoot>
                  <tr>
                    <td>Total</td>
                    <td style="text-align: right;">{formatCurrency(selectedInvoice.total)}</td>
                  </tr>
                </tfoot>
              </table>

              <div style="margin-top: 1rem;">
                <a href={`/admin/invoices/${selectedInvoice.id}`} class="btn btn-secondary btn-sm">
                  View Full Invoice
                </a>
              </div>
            </div>
          ) : preselectedMember ? (
            <div class="empty-state">
              {outstandingInvoices.length === 0 ? (
                <p>No outstanding invoices to display.</p>
              ) : (
                <p>Select an invoice to see preview.</p>
              )}
            </div>
          ) : (
            <div class="empty-state">
              <p>Select a member to see their outstanding invoices.</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>

