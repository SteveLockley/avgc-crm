<AdminLayout title="Record Payment">
  <div style="display: flex; gap: 1rem; margin-bottom: 1.5rem;">
    <button type="button" onclick="handleBack()" class="btn btn-secondary">
      &larr; Back
    </button>
  </div>

  {error && <div class="alert alert-error">{error}</div>}

  <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
    <!-- Payment Form -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Record Invoice Payment</h3>
      </div>

      {(!membersWithInvoices.results || membersWithInvoices.results.length === 0) && !preselectedMember ? (
        <div style="padding: 2rem; text-align: center; color: #666;">
          <p>No members have outstanding invoices.</p>
          <p style="margin-top: 1rem;">
            <a href="/admin/invoices" class="btn btn-primary">View Invoices</a>
          </p>
        </div>
      ) : (
        <form method="POST" id="payment-form">
          <table style="width: 100%; border-collapse: collapse;">
            <tbody>
              <tr>
                <td style="padding: 0.75rem 0; vertical-align: top; width: 40%;">
                  <label class="form-label" for="member_id">Member *</label>
                </td>
