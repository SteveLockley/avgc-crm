<script define:vars={{ preselectedMemberId }}>
  // Handle invoice dropdown change via JavaScript for dynamic updates
  const invoiceSelect = document.getElementById('invoice_id');
  if (invoiceSelect) {
    invoiceSelect.addEventListener('change', function() {
      const invoiceId = this.value;
      if (invoiceId) {
        window.location.href = `/admin/payments/new?member_id=${preselectedMemberId}&invoice_id=${invoiceId}`;
      }
    });
  }

  // Unsaved changes detection
  const form = document.getElementById('payment-form');
  let initialFormData = null;
  let formSubmitting = false;

  function captureInitialState() {
    if (form) {
      initialFormData = new FormData(form);
    }
  }

  function getFormDataString(formData) {
    return Array.from(formData.entries()).map(([k, v]) => `${k}=${v}`).sort().join('&');
  }

  function hasUnsavedChanges() {
    if (!form || !initialFormData) return false;
    return getFormDataString(initialFormData) !== getFormDataString(new FormData(form));
  }

  function handleBack() {
    if (!formSubmitting && hasUnsavedChanges()) {
      m3Confirm('You have unsaved changes. Leave anyway?', {
        title: 'Unsaved Changes',
        confirmText: 'Leave',
        cancelText: 'Stay'
      }).then(confirmed => {
        if (confirmed) history.back();
      });
    } else {
      history.back();
    }
  }

  // Back/cancel buttons
  document.getElementById('back-btn').addEventListener('click', handleBack);
  document.getElementById('cancel-btn')?.addEventListener('click', handleBack);
  document.getElementById('cancel-btn-bottom')?.addEventListener('click', handleBack);

  // Intercept link clicks
  document.querySelectorAll('a[href]').forEach(link => {
    link.addEventListener('click', async (e) => {
      if (!formSubmitting && hasUnsavedChanges()) {
        e.preventDefault();
        const confirmed = await m3Confirm('You have unsaved changes. Leave anyway?', {
          title: 'Unsaved Changes',
          confirmText: 'Leave',
          cancelText: 'Stay'
        });
        if (confirmed) window.location.href = link.href;
      }
    });
  });

  // Handle page unload
  window.addEventListener('beforeunload', (e) => {
    if (!formSubmitting && hasUnsavedChanges()) {
      e.preventDefault();
      e.returnValue = '';
    }
  });

  form?.addEventListener('submit', () => { formSubmitting = true; });

  captureInitialState();
</script>
