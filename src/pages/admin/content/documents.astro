    width: 100%;
    padding: 0.625rem 0.875rem;
    border: 1px dashed var(--border);
    border-radius: 8px;
    font-size: 0.95rem;
    background: var(--card-bg, white);
    cursor: pointer;
  }

  .file-upload-area input[type="file"]:hover {
    border-color: var(--primary);
  }

