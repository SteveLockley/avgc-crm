    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--surface);
    border-radius: 6px;
    font-size: 0.85rem;
    color: var(--text-light);
  }

  .existing-file-info a {
    color: var(--primary);
  }

  .existing-file-info .form-hint {
    width: 100%;
    margin-top: 0;
  }

