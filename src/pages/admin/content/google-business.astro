---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { isGoogleConfigured, getGoogleMode } from '../../../lib/google-business';
import { getHoursBySeason, getCurrentSeason, getSeasonLabel, type Season } from '../../../lib/opening-hours';

const env = Astro.locals.runtime?.env;
const db = env?.DB;
const configured = isGoogleConfigured(env);
const googleMode = getGoogleMode(env);
const currentSeason = getCurrentSeason();
const locationId = env?.GOOGLE_LOCATION_ID || '';

const DAY_NAMES = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];

// Hours editor state
const seasonParam = Astro.url.searchParams.get('season');
const activeSeason: Season = (seasonParam === 'Winter' || seasonParam === 'Summer') ? seasonParam : currentSeason;

let hoursMessage = '';
let hoursMessageType: 'success' | 'error' | '' = '';

// Handle hours form POST
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action');
  const period = formData.get('period') as Season;

  try {
    if (action === 'update' && (period === 'Winter' || period === 'Summer')) {
      for (let day = 0; day < 7; day++) {
        const openTime = formData.get(`open_${day}`)?.toString() || '08:00';
        const closeTime = formData.get(`close_${day}`)?.toString() || '18:00';
        const isClosed = formData.get(`closed_${day}`) === 'on' ? 1 : 0;

        const existing = await db?.prepare(
          `SELECT id FROM opening_hours WHERE location = 'Clubhouse' AND period_name = ? AND day_of_week = ?`
        ).bind(period, day).first();

        if (existing) {
          await db?.prepare(
            `UPDATE opening_hours SET open_time = ?, close_time = ?, is_closed = ?, updated_at = datetime('now')
             WHERE location = 'Clubhouse' AND period_name = ? AND day_of_week = ?`
          ).bind(openTime, closeTime, isClosed, period, day).run();
        } else {
          await db?.prepare(
            `INSERT INTO opening_hours (location, period_name, day_of_week, open_time, close_time, is_closed, sort_order)
             VALUES ('Clubhouse', ?, ?, ?, ?, ?, ?)`
          ).bind(period, day, openTime, closeTime, isClosed, day).run();
        }
      }
      hoursMessage = `${period} hours updated successfully`;
      hoursMessageType = 'success';
    }
  } catch (e: any) {
    hoursMessage = e.message || 'Failed to update opening hours';
    hoursMessageType = 'error';
  }
}

// Fetch hours for active season
let hours: any[] = [];
if (db) {
  hours = await getHoursBySeason(db, activeSeason);
}

const hoursByDay = new Map<number, any>();
for (const h of hours) {
  if (h.day_of_week !== null) {
    hoursByDay.set(h.day_of_week, h);
  }
}

// Fetch last sync info
let lastSync: any = null;
let lastHoursPush: any = null;
let syncLog: any[] = [];
let specialHours: any[] = [];

if (db) {
  try {
    lastSync = await db.prepare(
      `SELECT * FROM google_sync_log ORDER BY created_at DESC LIMIT 1`
    ).first();

    lastHoursPush = await db.prepare(
      `SELECT * FROM google_sync_log WHERE action = 'push_hours' AND status = 'success' ORDER BY created_at DESC LIMIT 1`
    ).first();

    const logRows = await db.prepare(
      `SELECT * FROM google_sync_log ORDER BY created_at DESC LIMIT 20`
    ).all();
    syncLog = logRows.results || [];

    const today = new Date().toISOString().split('T')[0];
    const shRows = await db.prepare(
      `SELECT * FROM google_special_hours WHERE date >= ? ORDER BY date ASC`
    ).bind(today).all();
    specialHours = shRows.results || [];
  } catch (e) {
    console.error('Error loading Google Business data:', e);
  }
}
---

<AdminLayout title="Google Business Profile">
  <div class="gbp-page">
    <a href="/admin/content" class="back-link">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"/>
      </svg>
      Back to Content
    </a>

    <div id="alert-container"></div>

    {hoursMessage && (
      <div class={`alert alert-${hoursMessageType}`}>
        {hoursMessage}
      </div>
    )}

    <!-- Connection Status -->
    <div class="card">
      <div class="card-header">
        <div class="header-left">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="header-icon">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          <div>
            <h2>Connection Status</h2>
            <p>Google Business Profile API configuration</p>
          </div>
        </div>
        <div class="header-actions">
          {configured && (
            <button type="button" class="google-btn" id="test-connection">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;">
                <polyline points="23 4 23 10 17 10"/>
                <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
              </svg>
              Test Connection
            </button>
          )}
        </div>
      </div>
      <div class="card-body">
        <div class="status-row">
          <span class="status-label">Status</span>
          <span class={`status-badge ${configured ? 'status-ok' : 'status-error'}`}>
            {configured ? 'Configured' : 'Not Configured'}
          </span>
        </div>
        {configured && (
          <div class="status-row">
            <span class="status-label">Mode</span>
            <span class={`status-badge ${googleMode === 'proxy' ? 'status-proxy' : 'status-ok'}`}>
              {googleMode === 'proxy' ? 'Apps Script Proxy' : 'Direct API'}
            </span>
          </div>
        )}
        {configured && locationId && (
          <div class="status-row">
            <span class="status-label">Location ID</span>
            <code class="location-id">{locationId}</code>
          </div>
        )}
        {lastSync && (
          <div class="status-row">
            <span class="status-label">Last Activity</span>
            <span>{lastSync.action} — {lastSync.status} — {lastSync.created_at}</span>
          </div>
        )}
        <div id="profile-preview" style="display:none;">
          <div class="status-row">
            <span class="status-label">Business Name</span>
            <span id="preview-title">—</span>
          </div>
        </div>
      </div>
      {!configured && (
        <div class="card-body" style="border-top: 1px solid var(--border);">
          <div class="info-box" style="margin:0;">
            <h4>Setup Required</h4>
            <p><strong>Option 1 — Apps Script Proxy (recommended):</strong></p>
            <ul>
              <li><code>GOOGLE_APPS_SCRIPT_URL</code> — deployed web app URL</li>
              <li><code>GOOGLE_APPS_SCRIPT_SECRET</code> — shared secret</li>
            </ul>
            <p style="margin-top:0.75rem;"><strong>Option 2 — Direct API:</strong></p>
            <ul>
              <li><code>GOOGLE_CLIENT_ID</code></li>
              <li><code>GOOGLE_CLIENT_SECRET</code></li>
              <li><code>GOOGLE_REFRESH_TOKEN</code></li>
              <li><code>GOOGLE_LOCATION_ID</code></li>
            </ul>
          </div>
        </div>
      )}
    </div>

    {configured && (
      <!-- Business Information -->
      <div class="card">
        <div class="card-header">
          <div class="header-left">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="header-icon">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
            <div>
              <h2>Business Information</h2>
              <p>Edit your Google Business Profile details</p>
            </div>
          </div>
          <div class="header-actions">
            <button type="button" class="btn-secondary" id="fetch-info">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="7 10 12 15 17 10"/>
                <line x1="12" y1="15" x2="12" y2="3"/>
              </svg>
              Fetch from Google
            </button>
            <button type="button" class="google-btn" id="save-info">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;">
                <polyline points="22 2 15 22 11 13 2 9 22 2"/>
              </svg>
              Save to Google
            </button>
          </div>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="biz-description">Description</label>
            <textarea id="biz-description" rows="4" class="form-input" placeholder="Business description shown on Google..."></textarea>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="biz-phone">Phone Number</label>
              <input type="tel" id="biz-phone" class="form-input" placeholder="e.g. 01onal 830370" />
            </div>
            <div class="form-group">
              <label for="biz-website">Website URL</label>
              <input type="url" id="biz-website" class="form-input" placeholder="https://www.alnmouthvillage.golf" />
            </div>
          </div>
        </div>
      </div>

      <!-- Opening Hours -->
      <div class="season-tabs">
        <a href="?season=Summer" class={`tab ${activeSeason === 'Summer' ? 'active' : ''}`}>
          <span class="tab-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
            </svg>
          </span>
          Summer (Apr - Sep)
          {currentSeason === 'Summer' && <span class="season-badge">Active</span>}
        </a>
        <a href="?season=Winter" class={`tab ${activeSeason === 'Winter' ? 'active' : ''}`}>
          <span class="tab-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="2" y1="12" x2="22" y2="12"/><line x1="12" y1="2" x2="12" y2="22"/><line x1="20" y1="16" x2="4" y2="8"/><line x1="20" y1="8" x2="4" y2="16"/>
            </svg>
          </span>
          Winter (Oct - Mar)
          {currentSeason === 'Winter' && <span class="season-badge">Active</span>}
        </a>
      </div>

      <form method="POST">
        <input type="hidden" name="action" value="update" />
        <input type="hidden" name="period" value={activeSeason} />

        <div class="card">
          <div class="card-header">
            <div class="header-left">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="header-icon">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
              <div>
                <h2>{activeSeason} Hours</h2>
                <p>{getSeasonLabel(activeSeason)}{activeSeason === currentSeason ? ' — Currently showing on website' : ''}{lastHoursPush ? ` — Last pushed ${lastHoursPush.created_at}` : ''}</p>
              </div>
            </div>
            <div class="header-actions">
              <button type="submit" class="save-btn">Save Changes</button>
              <button type="button" class="google-btn" id="push-hours" data-season={activeSeason}>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;">
                  <polyline points="22 2 15 22 11 13 2 9 22 2"/>
                </svg>
                Push to Google
              </button>
            </div>
          </div>

          <div class="hours-list">
            {[1, 2, 3, 4, 5, 6, 0].map(day => {
              const h = hoursByDay.get(day);
              const openTime = h?.open_time || '08:00';
              const closeTime = h?.close_time || '18:00';
              const isClosed = h?.is_closed || false;

              return (
                <div class={`day-row ${isClosed ? 'day-closed' : ''}`}>
                  <div class="day-name">{DAY_NAMES[day]}</div>
                  <div class="day-inputs">
                    <div class="time-group">
                      <label>Opens</label>
                      <input
                        type="time"
                        name={`open_${day}`}
                        value={openTime}
                        class="time-input"
                      />
                    </div>
                    <div class="time-separator">to</div>
                    <div class="time-group">
                      <label>Closes</label>
                      <input
                        type="text"
                        name={`close_${day}`}
                        value={closeTime}
                        class="time-input"
                        placeholder="e.g. 18:00 or Dusk"
                      />
                    </div>
                    <div class="closed-toggle">
                      <label class="toggle-label">
                        <input
                          type="checkbox"
                          name={`closed_${day}`}
                          checked={isClosed}
                          class="toggle-checkbox"
                        />
                        <span class="toggle-text">Closed</span>
                      </label>
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      </form>

      <!-- Special Hours -->
      <div class="card">
        <div class="card-header">
          <div class="header-left">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="header-icon">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            <div>
              <h2>Special Hours</h2>
              <p>Holidays, closures, and other exceptional hours</p>
            </div>
          </div>
          <div class="header-actions">
            <button type="button" class="google-btn" id="push-special-hours">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;">
                <polyline points="22 2 15 22 11 13 2 9 22 2"/>
              </svg>
              Push to Google
            </button>
          </div>
        </div>
        <div class="card-body">
          <div class="add-special-form" id="add-special-form">
            <div class="form-row">
              <div class="form-group">
                <label for="sh-date">Date</label>
                <input type="date" id="sh-date" class="form-input" required />
              </div>
              <div class="form-group">
                <label for="sh-open">Open</label>
                <input type="time" id="sh-open" class="form-input" value="08:30" />
              </div>
              <div class="form-group">
                <label for="sh-close">Close</label>
                <input type="time" id="sh-close" class="form-input" value="16:00" />
              </div>
              <div class="form-group">
                <label class="toggle-label" style="padding-top:1.5rem;">
                  <input type="checkbox" id="sh-closed" class="toggle-checkbox" />
                  <span class="toggle-text">Closed</span>
                </label>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group" style="flex:1;">
                <label for="sh-label">Label (optional)</label>
                <input type="text" id="sh-label" class="form-input" placeholder="e.g. Good Friday, Christmas Day" />
              </div>
              <div class="form-group" style="align-self:flex-end;">
                <button type="button" class="save-btn" id="add-special-hour">Add</button>
              </div>
            </div>
          </div>

          {specialHours.length > 0 ? (
            <table class="data-table" id="special-hours-table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Hours</th>
                  <th>Label</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {specialHours.map((sh: any) => (
                  <tr data-id={sh.id}>
                    <td>{sh.date}</td>
                    <td>{sh.is_closed ? 'Closed' : `${sh.open_time || '—'} – ${sh.close_time || '—'}`}</td>
                    <td>{sh.label || '—'}</td>
                    <td>
                      <button type="button" class="btn-delete" data-id={sh.id}>Delete</button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          ) : (
            <p class="empty-text">No special hours entries. Add holidays or closures above.</p>
          )}
        </div>
      </div>

      <!-- Sync Log -->
      <div class="card">
        <div class="card-header">
          <div class="header-left">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="header-icon">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
            </svg>
            <div>
              <h2>Sync Log</h2>
              <p>Recent Google Business Profile activity</p>
            </div>
          </div>
        </div>
        {syncLog.length > 0 ? (
          <table class="data-table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Action</th>
                <th>Status</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
              {syncLog.map((log: any) => (
                <tr>
                  <td>{log.created_at}</td>
                  <td><code>{log.action}</code></td>
                  <td>
                    <span class={`status-badge ${log.status === 'success' ? 'status-ok' : 'status-error'}`}>
                      {log.status}
                    </span>
                  </td>
                  <td class="log-detail">{log.error_message || log.season || '—'}</td>
                </tr>
              ))}
            </tbody>
          </table>
        ) : (
          <div class="card-body">
            <p class="empty-text">No sync activity yet.</p>
          </div>
        )}
      </div>
    )}
  </div>

  <script is:inline>
    function showAlert(message, type) {
      const container = document.getElementById('alert-container');
      container.innerHTML = `<div class="alert alert-${type}">${message}</div>`;
      setTimeout(() => { container.innerHTML = ''; }, 6000);
    }

    // Test Connection
    document.getElementById('test-connection')?.addEventListener('click', async function() {
      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Testing...';
      try {
        const resp = await fetch('/api/google-profile');
        const result = await resp.json();
        if (result.success) {
          showAlert('Connection successful! Business: ' + (result.data?.title || 'Unknown'), 'success');
          document.getElementById('preview-title').textContent = result.data?.title || '—';
          document.getElementById('profile-preview').style.display = 'block';
        } else {
          showAlert('Connection failed: ' + (result.error || 'Unknown error'), 'error');
        }
      } catch (e) {
        showAlert('Connection test failed. Check console.', 'error');
        console.error(e);
      }
      btn.disabled = false;
      btn.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;"><polyline points="23 4 23 10 17 10"/><path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/></svg> Test Connection';
    });

    // Fetch Info
    document.getElementById('fetch-info')?.addEventListener('click', async function() {
      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Fetching...';
      try {
        const resp = await fetch('/api/google-profile');
        const result = await resp.json();
        if (result.success && result.data) {
          document.getElementById('biz-description').value = result.data.description || '';
          document.getElementById('biz-phone').value = result.data.primaryPhone || '';
          document.getElementById('biz-website').value = result.data.websiteUri || '';
          showAlert('Profile loaded from Google', 'success');
        } else {
          showAlert('Failed to fetch: ' + (result.error || 'Unknown error'), 'error');
        }
      } catch (e) {
        showAlert('Fetch failed. Check console.', 'error');
        console.error(e);
      }
      btn.disabled = false;
      btn.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg> Fetch from Google';
    });

    // Save Info
    document.getElementById('save-info')?.addEventListener('click', async function() {
      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Saving...';
      try {
        const body = {
          description: document.getElementById('biz-description').value,
          primaryPhone: document.getElementById('biz-phone').value,
          websiteUri: document.getElementById('biz-website').value,
        };
        const resp = await fetch('/api/google-profile', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body),
        });
        const result = await resp.json();
        if (result.success) {
          showAlert('Business information updated on Google', 'success');
        } else {
          showAlert('Update failed: ' + (result.error || 'Unknown error'), 'error');
        }
      } catch (e) {
        showAlert('Save failed. Check console.', 'error');
        console.error(e);
      }
      btn.disabled = false;
      btn.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;"><polyline points="22 2 15 22 11 13 2 9 22 2"/></svg> Save to Google';
    });

    // Push Hours
    document.getElementById('push-hours')?.addEventListener('click', async function() {
      const btn = this;
      const season = btn.getAttribute('data-season');
      btn.disabled = true;
      btn.textContent = 'Pushing...';
      try {
        const resp = await fetch('/api/google-hours', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ season, force: true }),
        });
        const result = await resp.json();
        if (result.success) {
          let msg = 'Hours pushed to Google!';
          if (result.skippedDays?.length) {
            msg += ' Skipped days with text-based times: ' + result.skippedDays.join(', ');
          }
          showAlert(msg, 'success');
        } else {
          showAlert('Push failed: ' + (result.error || 'Unknown error'), 'error');
        }
      } catch (e) {
        showAlert('Push failed. Check console.', 'error');
        console.error(e);
      }
      btn.disabled = false;
      btn.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;"><polyline points="22 2 15 22 11 13 2 9 22 2"/></svg> Push Hours to Google';
    });

    // Add Special Hour
    document.getElementById('add-special-hour')?.addEventListener('click', async function() {
      const date = document.getElementById('sh-date').value;
      if (!date) { showAlert('Please select a date', 'error'); return; }

      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Adding...';
      try {
        const isClosed = document.getElementById('sh-closed').checked;
        const body = {
          action: 'add',
          date,
          openTime: isClosed ? null : document.getElementById('sh-open').value,
          closeTime: isClosed ? null : document.getElementById('sh-close').value,
          isClosed,
          label: document.getElementById('sh-label').value || null,
        };
        const resp = await fetch('/api/google-special-hours', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body),
        });
        const result = await resp.json();
        if (result.success) {
          showAlert('Special hours entry added', 'success');
          location.reload();
        } else {
          showAlert('Failed: ' + (result.error || 'Unknown error'), 'error');
        }
      } catch (e) {
        showAlert('Failed to add entry. Check console.', 'error');
        console.error(e);
      }
      btn.disabled = false;
      btn.textContent = 'Add';
    });

    // Delete Special Hour
    document.querySelectorAll('.btn-delete').forEach(btn => {
      btn.addEventListener('click', async function() {
        if (!confirm('Delete this special hours entry?')) return;
        const id = parseInt(this.getAttribute('data-id'));
        this.disabled = true;
