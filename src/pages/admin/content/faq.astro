---
import AdminLayout from '../../../layouts/AdminLayout.astro';

const db = Astro.locals.runtime?.env?.DB;
const url = new URL(Astro.request.url);
const action = url.searchParams.get('action');
const editId = url.searchParams.get('id');

let faqs: any[] = [];
let editFaq: any = null;
let message = '';
let messageType: 'success' | 'error' | '' = '';

const categories = [
  { value: 'general', label: 'General' },
  { value: 'visitors', label: 'Visitors' },
  { value: 'members', label: 'Members' }
];

// Handle form submission
if (Astro.request.method === 'POST' && db) {
  const formData = await Astro.request.formData();
  const formAction = formData.get('_action');

  try {
    if (formAction === 'create' || formAction === 'update') {
      const category = formData.get('category')?.toString();
      const question = formData.get('question')?.toString().trim();
      const answer = formData.get('answer')?.toString().trim();
      const keywords = formData.get('keywords')?.toString().trim() || null;
      const sortOrder = parseInt(formData.get('sort_order')?.toString() || '0');
      const published = formData.get('published') === 'on' ? 1 : 0;

      if (!category || !question || !answer) {
        message = 'Category, question, and answer are required.';
        messageType = 'error';
      } else if (formAction === 'create') {
        await db.prepare(
          `INSERT INTO website_faq (category, question, answer, keywords, sort_order, published)
           VALUES (?, ?, ?, ?, ?, ?)`
        ).bind(category, question, answer, keywords, sortOrder, published).run();
        message = 'FAQ created successfully.';
        messageType = 'success';
      } else {
        const id = formData.get('id');
        await db.prepare(
          `UPDATE website_faq
           SET category = ?, question = ?, answer = ?, keywords = ?, sort_order = ?, published = ?
           WHERE id = ?`
        ).bind(category, question, answer, keywords, sortOrder, published, id).run();
        message = 'FAQ updated successfully.';
        messageType = 'success';
      }
    } else if (formAction === 'delete') {
      const id = formData.get('id');
      await db.prepare('DELETE FROM website_faq WHERE id = ?').bind(id).run();
      message = 'FAQ deleted successfully.';
      messageType = 'success';
    }
  } catch (e: any) {
    message = e.message || 'An error occurred.';
    messageType = 'error';
  }
}

// Fetch FAQs
if (db) {
  try {
    const result = await db.prepare(
      'SELECT * FROM website_faq ORDER BY category, sort_order, id'
    ).all();
    faqs = result.results || [];

    if (editId) {
      editFaq = await db.prepare('SELECT * FROM website_faq WHERE id = ?').bind(editId).first();
    }
  } catch (e) {
    console.error('Error fetching FAQs:', e);
  }
}

const isEditing = action === 'edit' && editFaq;
const isCreating = action === 'new';

// Group FAQs by category
const faqsByCategory = faqs.reduce((acc: Record<string, any[]>, faq) => {
  if (!acc[faq.category]) acc[faq.category] = [];
  acc[faq.category].push(faq);
  return acc;
}, {});
---

<AdminLayout title="FAQ Management">
  <div class="faq-admin">
    {message && (
      <div class={`alert alert-${messageType}`}>
        {message}
      </div>
    )}

    {(isCreating || isEditing) ? (
      <div class="editor-section">
        <div class="editor-header">
          <a href="/admin/content/faq" class="back-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5"/><polyline points="12 19 5 12 12 5"/>
            </svg>
            Back to FAQs
          </a>
          <h2>{isEditing ? 'Edit FAQ' : 'New FAQ'}</h2>
        </div>

        <form method="POST" class="editor-form">
          <input type="hidden" name="_action" value={isEditing ? 'update' : 'create'} />
          {isEditing && <input type="hidden" name="id" value={editFaq.id} />}

          <div class="form-row">
            <div class="form-group">
              <label for="category">Category *</label>
              <select id="category" name="category" required>
                {categories.map(cat => (
                  <option value={cat.value} selected={editFaq?.category === cat.value}>
                    {cat.label}
                  </option>
                ))}
              </select>
            </div>
            <div class="form-group">
              <label for="sort_order">Sort Order</label>
              <input
                type="number"
                id="sort_order"
                name="sort_order"
                value={editFaq?.sort_order || 0}
                min="0"
              />
              <span class="form-hint">Lower numbers appear first</span>
            </div>
          </div>

          <div class="form-group">
            <label for="question">Question *</label>
            <input
              type="text"
              id="question"
              name="question"
              value={editFaq?.question || ''}
              required
            />
          </div>

          <div class="form-group">
            <label for="answer">Answer * (HTML)</label>
            <textarea
              id="answer"
              name="answer"
              rows="8"
              required
            >{editFaq?.answer || ''}</textarea>
          </div>

          <div class="form-group">
            <label for="keywords">Keywords (for bot matching)</label>
            <input
              type="text"
              id="keywords"
              name="keywords"
              value={editFaq?.keywords || ''}
              placeholder="green fees, booking, prices..."
            />
            <span class="form-hint">Comma-separated keywords to help the FAQ bot match this question</span>
          </div>

          <div class="form-group checkbox-group">
            <label class="checkbox-label">
              <input
                type="checkbox"
                name="published"
                checked={editFaq?.published !== 0}
              />
              <span>Published</span>
            </label>
          </div>

          <div class="form-actions">
            <a href="/admin/content/faq" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">
              {isEditing ? 'Save Changes' : 'Create FAQ'}
            </button>
          </div>
        </form>
      </div>
    ) : (
      <div class="list-section">
        <div class="list-header">
          <p>{faqs.length} FAQ{faqs.length !== 1 ? 's' : ''}</p>
          <a href="/admin/content/faq?action=new" class="btn btn-primary">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            New FAQ
          </a>
        </div>

        {faqs.length > 0 ? (
          <div class="faq-categories">
            {categories.map(cat => faqsByCategory[cat.value]?.length > 0 && (
              <div class="faq-category">
                <h3 class="category-title">{cat.label}</h3>
                <div class="faq-list">
                  {faqsByCategory[cat.value].map((faq: any) => (
                    <div class="faq-item">
                      <div class="faq-info">
                        <span class={`status-indicator ${faq.published ? 'published' : 'draft'}`}></span>
                        <span class="faq-question">{faq.question}</span>
                      </div>
                      <div class="faq-actions">
                        <a href={`/admin/content/faq?action=edit&id=${faq.id}`} class="action-btn" title="Edit">
                          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                          </svg>
                        </a>
                        <form method="POST" class="delete-form" onsubmit="return confirm('Delete this FAQ?')">
                          <input type="hidden" name="_action" value="delete" />
                          <input type="hidden" name="id" value={faq.id} />
                          <button type="submit" class="action-btn delete" title="Delete">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                              <polyline points="3 6 5 6 21 6"/>
                              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                            </svg>
                          </button>
                        </form>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
            <h3>No FAQs Yet</h3>
            <p>Create your first FAQ to get started.</p>
            <a href="/admin/content/faq?action=new" class="btn btn-primary">Create FAQ</a>
          </div>
        )}
      </div>
    )}
  </div>
</AdminLayout>

<style>
  .faq-admin {
    max-width: 1000px;
  }

  .alert {
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .alert-success {
    background: #dcfce7;
    color: #166534;
  }

  .alert-error {
    background: #fee2e2;
    color: #991b1b;
  }

  /* Editor Section */
  .editor-header {
    margin-bottom: 1.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-light);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .back-link:hover {
    color: var(--primary);
  }

  .back-link svg {
    width: 18px;
    height: 18px;
  }

  .editor-header h2 {
    margin: 0;
    font-size: 1.25rem;
  }

  .editor-form {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  @media (min-width: 600px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-row > .form-group {
    margin-bottom: 0;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    font-size: 0.9rem;
  }

  .form-group input[type="text"],
  .form-group input[type="url"],
  .form-group input[type="date"],
  .form-group input[type="email"],
  .form-group input[type="number"],
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 0.625rem 0.875rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    font-size: 0.95rem;
    font-family: inherit;
    background: var(--card-bg);
  }

  .form-group textarea {
    resize: vertical;
    font-family: monospace;
  }

  .form-group input:focus:not([type="checkbox"]),
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(30, 86, 49, 0.1);
  }

  .form-hint {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.8rem;
    color: var(--text-light);
  }

  .checkbox-group {
    margin-top: 1rem;
  }

  .checkbox-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
  }

  .checkbox-label input {
    width: 18px;
    height: 18px;
  }

  .form-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  /* List Section */
  .list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .list-header p {
    margin: 0;
    color: var(--text-light);
  }

  .faq-categories {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .category-title {
    margin: 0 0 0.75rem 0;
    font-size: 1rem;
    color: var(--primary);
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary);
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .faq-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 0.875rem 1rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 8px;
  }

  .faq-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
    min-width: 0;
  }

  .status-indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .status-indicator.published {
    background: #22c55e;
  }

  .status-indicator.draft {
    background: #f59e0b;
  }

  .faq-question {
    font-size: 0.95rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .faq-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .action-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--border);
    border-radius: 6px;
    background: var(--card-bg);
    color: var(--text-light);
    cursor: pointer;
    transition: all 0.2s;
  }

  .action-btn:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  .action-btn.delete:hover {
    border-color: #dc2626;
    color: #dc2626;
    background: #fee2e2;
  }

  .action-btn svg {
    width: 16px;
    height: 16px;
  }

  .delete-form {
    display: contents;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    border: none;
    transition: all 0.2s;
  }

  .btn svg {
    width: 18px;
    height: 18px;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-dark, #164024);
  }

  .btn-secondary {
    background: var(--surface);
    color: var(--text);
    border: 1px solid var(--border);
  }

  .btn-secondary:hover {
    background: var(--border);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
  }

  .empty-state svg {
    width: 64px;
    height: 64px;
    color: var(--text-light);
    opacity: 0.5;
    margin-bottom: 1rem;
  }

  .empty-state h3 {
    margin: 0 0 0.5rem 0;
  }

  .empty-state p {
    margin: 0 0 1.5rem 0;
    color: var(--text-light);
  }
</style>
