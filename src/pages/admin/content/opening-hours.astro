---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getHoursBySeason, getCurrentSeason, getSeasonLabel, type Season } from '../../../lib/opening-hours';
import { isGoogleConfigured } from '../../../lib/google-business';

const db = Astro.locals.runtime?.env?.DB;
const env = Astro.locals.runtime?.env;

const DAY_NAMES = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];

const currentSeason = getCurrentSeason();
const seasonParam = Astro.url.searchParams.get('season');
const activeSeason: Season = (seasonParam === 'Winter' || seasonParam === 'Summer') ? seasonParam : currentSeason;
const googleConfigured = isGoogleConfigured(env);

let message = '';
let messageType: 'success' | 'error' | '' = '';

// Handle form submissions
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action');
  const period = formData.get('period') as Season;

  try {
    if (action === 'update' && (period === 'Winter' || period === 'Summer')) {
      for (let day = 0; day < 7; day++) {
        const openTime = formData.get(`open_${day}`)?.toString() || '08:00';
        const closeTime = formData.get(`close_${day}`)?.toString() || '18:00';
        const isClosed = formData.get(`closed_${day}`) === 'on' ? 1 : 0;

        const existing = await db?.prepare(
          `SELECT id FROM opening_hours WHERE location = 'Clubhouse' AND period_name = ? AND day_of_week = ?`
        ).bind(period, day).first();

        if (existing) {
          await db?.prepare(
            `UPDATE opening_hours SET open_time = ?, close_time = ?, is_closed = ?, updated_at = datetime('now')
             WHERE location = 'Clubhouse' AND period_name = ? AND day_of_week = ?`
          ).bind(openTime, closeTime, isClosed, period, day).run();
        } else {
          await db?.prepare(
            `INSERT INTO opening_hours (location, period_name, day_of_week, open_time, close_time, is_closed, sort_order)
             VALUES ('Clubhouse', ?, ?, ?, ?, ?, ?)`
          ).bind(period, day, openTime, closeTime, isClosed, day).run();
        }
      }
      message = `${period} hours updated successfully`;
      messageType = 'success';
    }
  } catch (e: any) {
    message = e.message || 'Failed to update opening hours';
    messageType = 'error';
  }
}

// Fetch hours for the active season tab
let hours: any[] = [];
if (db) {
  hours = await getHoursBySeason(db, activeSeason);
}

const hoursByDay = new Map<number, any>();
for (const h of hours) {
  if (h.day_of_week !== null) {
    hoursByDay.set(h.day_of_week, h);
  }
}
---

<AdminLayout title="Opening Hours">
  <div class="hours-page">
    <a href="/admin/content" class="back-link">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"/>
      </svg>
      Back to Content
    </a>

    {message && (
      <div class={`alert alert-${messageType}`}>
        {message}
      </div>
    )}

    <!-- Season Tabs -->
    <div class="season-tabs">
      <a href="?season=Summer" class={`tab ${activeSeason === 'Summer' ? 'active' : ''}`}>
        <span class="tab-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
          </svg>
        </span>
        Summer (Apr - Sep)
        {currentSeason === 'Summer' && <span class="badge">Active</span>}
      </a>
      <a href="?season=Winter" class={`tab ${activeSeason === 'Winter' ? 'active' : ''}`}>
        <span class="tab-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="2" y1="12" x2="22" y2="12"/><line x1="12" y1="2" x2="12" y2="22"/><line x1="20" y1="16" x2="4" y2="8"/><line x1="20" y1="8" x2="4" y2="16"/>
          </svg>
        </span>
        Winter (Oct - Mar)
        {currentSeason === 'Winter' && <span class="badge">Active</span>}
      </a>
    </div>

    <form method="POST">
      <input type="hidden" name="action" value="update" />
      <input type="hidden" name="period" value={activeSeason} />

      <div class="hours-card">
        <div class="card-header">
          <div class="header-left">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="header-icon">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            <div>
              <h2>{activeSeason} Hours</h2>
              <p>{getSeasonLabel(activeSeason)}{activeSeason === currentSeason ? ' â€” Currently showing on website' : ''}</p>
            </div>
          </div>
          <div class="header-actions">
            <button type="submit" class="save-btn">Save Changes</button>
            {googleConfigured && (
              <button type="button" class="google-btn" id="push-google" data-season={activeSeason}>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;">
                  <polyline points="22 2 15 22 11 13 2 9 22 2"/>
                </svg>
                Push to Google
              </button>
            )}
          </div>
        </div>

        <div class="hours-list">
          {[1, 2, 3, 4, 5, 6, 0].map(day => {
            const h = hoursByDay.get(day);
            const openTime = h?.open_time || '08:00';
            const closeTime = h?.close_time || '18:00';
            const isClosed = h?.is_closed || false;

            return (
              <div class={`day-row ${isClosed ? 'day-closed' : ''}`}>
                <div class="day-name">{DAY_NAMES[day]}</div>
                <div class="day-inputs">
                  <div class="time-group">
                    <label>Opens</label>
                    <input
                      type="time"
                      name={`open_${day}`}
                      value={openTime}
                      class="time-input"
                    />
                  </div>
                  <div class="time-separator">to</div>
                  <div class="time-group">
                    <label>Closes</label>
                    <input
                      type="text"
                      name={`close_${day}`}
                      value={closeTime}
                      class="time-input"
                      placeholder="e.g. 18:00 or Dusk"
                    />
                  </div>
                  <div class="closed-toggle">
                    <label class="toggle-label">
                      <input
                        type="checkbox"
                        name={`closed_${day}`}
                        checked={isClosed}
                        class="toggle-checkbox"
                      />
                      <span class="toggle-text">Closed</span>
                    </label>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </form>

    {!googleConfigured && (
      <div class="info-box">
        <h4>Google Business Profile</h4>
        <p>To automatically push hours to Google, add these Cloudflare secrets:</p>
        <ul>
          <li><code>GOOGLE_CLIENT_ID</code></li>
          <li><code>GOOGLE_CLIENT_SECRET</code></li>
          <li><code>GOOGLE_REFRESH_TOKEN</code></li>
          <li><code>GOOGLE_LOCATION_ID</code></li>
        </ul>
      </div>
    )}

    <div class="info-box">
      <h4>Tips</h4>
      <ul>
        <li>Use the time picker for opening times (e.g. 08:30)</li>
        <li>Close time can be a time (e.g. 19:00) or text like "Dusk"</li>
        <li>Tick "Closed" to mark a day as closed</li>
        <li>The website automatically shows the correct season's hours</li>
        <li>Summer runs April through September, Winter runs October through March</li>
      </ul>
    </div>
  </div>

  <script is:inline>
    document.getElementById('push-google')?.addEventListener('click', async function() {
      const btn = this;
      const season = btn.getAttribute('data-season');
      btn.disabled = true;
      btn.textContent = 'Pushing...';
      try {
        const resp = await fetch('/api/google-hours', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ season, force: true })
        });
        const result = await resp.json();
        if (result.success) {
          alert('Hours pushed to Google Business Profile!' + (result.skippedDays?.length ? '\nSkipped days with text-based times: ' + result.skippedDays.join(', ') : ''));
        } else {
          alert('Error: ' + (result.error || 'Unknown error'));
        }
      } catch (e) {
        alert('Failed to push hours. Check console for details.');
        console.error(e);
      }
      btn.disabled = false;
      btn.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:16px;height:16px;"><polyline points="22 2 15 22 11 13 2 9 22 2"/></svg> Push to Google';
    });
  </script>
</AdminLayout>

<style>
  .hours-page {
    max-width: 800px;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--text-light);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .back-link:hover {
    color: var(--primary);
  }

  .back-link svg {
    width: 18px;
    height: 18px;
  }

  .alert {
    padding: 0.875rem 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .alert-success {
    background: #dcfce7;
    color: #166534;
    border: 1px solid #bbf7d0;
  }

  .alert-error {
    background: #fee2e2;
    color: #991b1b;
    border: 1px solid #fecaca;
  }

  /* Season Tabs */
  .season-tabs {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--card-bg, #fff);
    border: 2px solid var(--border, #e5e7eb);
    border-radius: 10px;
    text-decoration: none;
    color: var(--text-light);
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.2s;
    flex: 1;
    justify-content: center;
  }

  .tab:hover {
    border-color: var(--primary);
    color: var(--text);
  }

  .tab.active {
    border-color: var(--primary);
    background: var(--primary-light, #e8f5e9);
    color: var(--primary);
  }

  .tab-icon svg {
    width: 18px;
    height: 18px;
  }

  .badge {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: var(--primary);
    color: white;
    padding: 0.15rem 0.5rem;
    border-radius: 10px;
  }

  /* Card */
  .hours-card {
    background: var(--card-bg, #fff);
    border: 1px solid var(--border, #e5e7eb);
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--border, #e5e7eb);
    gap: 1rem;
    flex-wrap: wrap;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .header-icon {
    width: 32px;
    height: 32px;
    color: var(--primary);
    flex-shrink: 0;
  }

  .card-header h2 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--text);
  }

  .card-header p {
    margin: 0.125rem 0 0 0;
    font-size: 0.85rem;
    color: var(--text-light);
  }

  .header-actions {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .save-btn {
    padding: 0.625rem 1.25rem;
    background: var(--primary);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
    white-space: nowrap;
  }

  .save-btn:hover {
    background: var(--primary-dark, #164024);
  }

  .google-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1rem;
    background: #4285f4;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
    white-space: nowrap;
  }

  .google-btn:hover {
    background: #3367d6;
  }

  .google-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  /* Day rows */
  .hours-list {
    padding: 0;
  }

  .day-row {
    display: flex;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--border, #e5e7eb);
    gap: 1rem;
    transition: background 0.15s;
  }

  .day-row:last-child {
    border-bottom: none;
  }

  .day-row:hover {
    background: var(--surface, #f9fafb);
  }

  .day-row.day-closed {
    opacity: 0.5;
  }

  .day-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text);
    width: 110px;
    flex-shrink: 0;
  }

  .day-inputs {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
    flex-wrap: wrap;
  }

  .time-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .time-group label {
    font-size: 0.75rem;
    color: var(--text-light);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .time-input {
    padding: 0.5rem 0.625rem;
    border: 1px solid var(--border, #d1d5db);
    border-radius: 8px;
    font-size: 0.9rem;
    font-family: inherit;
    width: 130px;
    background: var(--white, #fff);
    transition: border-color 0.2s;
  }

  .time-input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(34, 139, 34, 0.1);
  }

  .time-separator {
    color: var(--text-light);
    font-size: 0.9rem;
    padding-top: 1.25rem;
  }

  .closed-toggle {
    margin-left: auto;
  }

  .toggle-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    transition: background 0.15s;
  }

  .toggle-label:hover {
    background: var(--surface, #f3f4f6);
  }

  .toggle-checkbox {
    width: 16px;
    height: 16px;
    accent-color: var(--primary);
    cursor: pointer;
  }

  .toggle-text {
    font-size: 0.85rem;
    color: var(--text-light);
    user-select: none;
  }

  /* Info box */
  .info-box {
    background: #f0f9ff;
    border: 1px solid #bae6fd;
    border-radius: 12px;
    padding: 1.25rem 1.5rem;
    margin-bottom: 1rem;
  }

  .info-box h4 {
    margin: 0 0 0.5rem 0;
    color: #0369a1;
    font-size: 0.95rem;
  }

  .info-box p {
    margin: 0 0 0.5rem 0;
    font-size: 0.9rem;
    color: #0c4a6e;
  }

  .info-box ul {
    margin: 0;
    padding-left: 1.25rem;
    color: #0c4a6e;
  }

  .info-box li {
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .info-box code {
    background: #e0f2fe;
    padding: 0.1rem 0.4rem;
    border-radius: 4px;
    font-size: 0.85rem;
  }

  @media (max-width: 600px) {
    .season-tabs {
      flex-direction: column;
    }

    .day-row {
      flex-direction: column;
      align-items: flex-start;
      padding: 1rem;
    }

    .day-name {
      width: auto;
    }

    .day-inputs {
      width: 100%;
    }

    .closed-toggle {
      margin-left: 0;
    }

    .card-header {
      padding: 1rem;
    }

    .header-actions {
      width: 100%;
    }

    .save-btn, .google-btn {
      flex: 1;
      text-align: center;
      justify-content: center;
    }
  }
</style>
