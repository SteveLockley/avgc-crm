---
import AdminLayout from '../../../layouts/AdminLayout.astro';

const db = Astro.locals.runtime?.env?.DB;
const url = new URL(Astro.request.url);
const editSlug = url.searchParams.get('edit');

let pages: any[] = [];
let editPage: any = null;
let message = '';
let messageType: 'success' | 'error' | '' = '';

// Predefined pages that should exist
const predefinedPages = [
  { slug: 'course', title: 'Course', description: 'Course information and hole guide' },
  { slug: 'visitors', title: 'Visitors', description: 'Green fees and visitor information' },
  { slug: 'membership', title: 'Membership', description: 'Membership categories and benefits' },
  { slug: 'clubhouse', title: 'Clubhouse', description: 'Facilities and amenities' }
];

// Handle form submission
if (Astro.request.method === 'POST' && db) {
  const formData = await Astro.request.formData();
  const formAction = formData.get('_action');

  try {
    if (formAction === 'update') {
      const slug = formData.get('slug')?.toString();
      const title = formData.get('title')?.toString().trim();
      const metaDescription = formData.get('meta_description')?.toString().trim() || null;
      const content = formData.get('content')?.toString().trim();
      const heroImage = formData.get('hero_image')?.toString().trim() || null;
      const published = formData.get('published') === 'on' ? 1 : 0;

      if (!title || !content) {
        message = 'Title and content are required.';
        messageType = 'error';
      } else {
        // Check if page exists
        const existing = await db.prepare('SELECT id FROM website_pages WHERE slug = ?').bind(slug).first();

        if (existing) {
          await db.prepare(
            `UPDATE website_pages
             SET title = ?, meta_description = ?, content = ?, hero_image = ?, published = ?, updated_at = datetime('now')
             WHERE slug = ?`
          ).bind(title, metaDescription, content, heroImage, published, slug).run();
        } else {
          await db.prepare(
            `INSERT INTO website_pages (slug, title, meta_description, content, hero_image, published, updated_at)
             VALUES (?, ?, ?, ?, ?, ?, datetime('now'))`
          ).bind(slug, title, metaDescription, content, heroImage, published).run();
        }
        message = 'Page saved successfully.';
        messageType = 'success';
      }
    }
  } catch (e: any) {
    message = e.message || 'An error occurred.';
    messageType = 'error';
  }
}

// Fetch pages
if (db) {
  try {
    const result = await db.prepare('SELECT * FROM website_pages ORDER BY slug').all();
    pages = result.results || [];

    if (editSlug) {
      editPage = await db.prepare('SELECT * FROM website_pages WHERE slug = ?').bind(editSlug).first();
      // If page doesn't exist in DB, create a template from predefined
      if (!editPage) {
        const predefined = predefinedPages.find(p => p.slug === editSlug);
        if (predefined) {
          editPage = {
            slug: predefined.slug,
            title: predefined.title,
            meta_description: '',
            content: '',
            hero_image: '',
            published: 1
          };
        }
      }
    }
  } catch (e) {
    console.error('Error fetching pages:', e);
  }
}

// Merge predefined pages with existing
const pageStatus = predefinedPages.map(predefined => {
  const existing = pages.find(p => p.slug === predefined.slug);
  return {
    ...predefined,
    exists: !!existing,
    published: existing?.published ?? false,
    updatedAt: existing?.updated_at
  };
});
---

<AdminLayout title="Website Pages">
  <div class="pages-admin">
    {message && (
      <div class={`alert alert-${messageType}`}>
        {message}
      </div>
    )}

    {editPage ? (
      <div class="editor-section">
        <div class="editor-header">
          <a href="/admin/content/pages" class="back-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5"/><polyline points="12 19 5 12 12 5"/>
            </svg>
            Back to Pages
          </a>
          <h2>Edit {editPage.title} Page</h2>
        </div>

        <form method="POST" class="editor-form">
          <input type="hidden" name="_action" value="update" />
          <input type="hidden" name="slug" value={editPage.slug} />

          <div class="form-row">
            <div class="form-group">
              <label for="title">Page Title *</label>
              <input
                type="text"
                id="title"
                name="title"
                value={editPage.title}
                required
              />
            </div>
            <div class="form-group">
              <label>URL</label>
              <div class="url-display">/{editPage.slug}</div>
            </div>
          </div>

          <div class="form-group">
            <label for="meta_description">Meta Description (SEO)</label>
            <textarea
              id="meta_description"
              name="meta_description"
              rows="2"
              placeholder="Brief description for search engines..."
            >{editPage.meta_description || ''}</textarea>
            <span class="form-hint">Recommended: 150-160 characters</span>
          </div>

          <div class="form-group">
            <label for="hero_image">Hero Image URL</label>
            <input
              type="url"
              id="hero_image"
              name="hero_image"
              value={editPage.hero_image || ''}
              placeholder="https://..."
            />
          </div>

          <div class="form-group">
            <label for="content">Page Content * (HTML)</label>
            <textarea
              id="content"
              name="content"
              rows="20"
              required
            >{editPage.content || ''}</textarea>
            <span class="form-hint">Use HTML to format the content. The content will be displayed inside the page layout.</span>
          </div>

          <div class="form-group checkbox-group">
            <label class="checkbox-label">
              <input
                type="checkbox"
                name="published"
                checked={editPage.published !== 0}
              />
              <span>Published</span>
            </label>
          </div>

          <div class="form-actions">
            <a href="/admin/content/pages" class="btn btn-secondary">Cancel</a>
            <a href={`/${editPage.slug}`} target="_blank" class="btn btn-secondary">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              Preview
            </a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    ) : (
      <div class="list-section">
        <div class="list-header">
          <p>Manage the content of your website pages. These are the main static pages.</p>
        </div>

        <div class="page-list">
          {pageStatus.map(page => (
            <div class="page-item">
              <div class="page-info">
                <div class="page-title">
                  <h3>{page.title}</h3>
                  <span class={`status-badge ${page.exists && page.published ? 'published' : page.exists ? 'draft' : 'empty'}`}>
                    {page.exists && page.published ? 'Published' : page.exists ? 'Draft' : 'Not Created'}
                  </span>
                </div>
                <p class="page-description">{page.description}</p>
                <span class="page-url">/{page.slug}</span>
              </div>
              <div class="page-actions">
                <a href={`/${page.slug}`} target="_blank" class="action-btn" title="View Page">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                    <circle cx="12" cy="12" r="3"/>
                  </svg>
                </a>
                <a href={`/admin/content/pages?edit=${page.slug}`} class="action-btn primary" title="Edit Page">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>

        <div class="info-box">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="16" x2="12" y2="12"/>
            <line x1="12" y1="8" x2="12.01" y2="8"/>
          </svg>
          <div>
            <h4>About Website Pages</h4>
            <p>These pages use a combination of database content and page-specific layouts. The HTML content you enter will be displayed within the page template. For complex layouts, you may need to edit the Astro page files directly.</p>
          </div>
        </div>
      </div>
    )}
  </div>
</AdminLayout>

<style>
  .pages-admin {
    max-width: 1000px;
  }

  .alert {
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .alert-success {
    background: #dcfce7;
    color: #166534;
  }

  .alert-error {
    background: #fee2e2;
    color: #991b1b;
  }

  /* Editor Section */
  .editor-header {
    margin-bottom: 1.5rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-light);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .back-link:hover {
    color: var(--primary);
  }

  .back-link svg {
    width: 18px;
    height: 18px;
  }

  .editor-header h2 {
    margin: 0;
    font-size: 1.25rem;
  }

  .editor-form {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  @media (min-width: 600px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-row > .form-group {
    margin-bottom: 0;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    font-size: 0.9rem;
  }

  .form-group input[type="text"],
  .form-group input[type="url"],
  .form-group input[type="date"],
  .form-group input[type="email"],
  .form-group input[type="number"],
  .form-group textarea {
    width: 100%;
    padding: 0.625rem 0.875rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    font-size: 0.95rem;
    font-family: inherit;
  }

  .form-group textarea {
    resize: vertical;
    font-family: monospace;
  }

  .form-group input:focus:not([type="checkbox"]),
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(30, 86, 49, 0.1);
  }

  .url-display {
    padding: 0.625rem 0.875rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    font-family: monospace;
    font-size: 0.95rem;
    color: var(--text-light);
  }

  .form-hint {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.8rem;
    color: var(--text-light);
  }

  .checkbox-group {
    margin-top: 1rem;
  }

  .checkbox-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
  }

  .checkbox-label input {
    width: 18px;
    height: 18px;
  }

  .form-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  /* List Section */
  .list-header {
    margin-bottom: 1.5rem;
  }

  .list-header p {
    margin: 0;
    color: var(--text-light);
  }

  .page-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .page-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
  }

  .page-info {
    flex: 1;
    min-width: 0;
  }

  .page-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .page-title h3 {
    margin: 0;
    font-size: 1.1rem;
  }

  .status-badge {
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .status-badge.published {
    background: #dcfce7;
    color: #166534;
  }

  .status-badge.draft {
    background: #fef3c7;
    color: #92400e;
  }

  .status-badge.empty {
    background: #f3f4f6;
    color: #6b7280;
  }

  .page-description {
    margin: 0 0 0.25rem 0;
    font-size: 0.9rem;
    color: var(--text-light);
  }

  .page-url {
    font-family: monospace;
    font-size: 0.85rem;
    color: var(--text-light);
  }

  .page-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .action-btn {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--border);
    border-radius: 8px;
    background: var(--card-bg);
    color: var(--text-light);
    cursor: pointer;
    transition: all 0.2s;
  }

  .action-btn:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  .action-btn.primary {
    background: var(--primary);
    border-color: var(--primary);
    color: white;
  }

  .action-btn.primary:hover {
    background: var(--primary-dark, #164024);
  }

  .action-btn svg {
    width: 18px;
    height: 18px;
  }

  .info-box {
    display: flex;
    gap: 1rem;
    background: var(--surface);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .info-box > svg {
    width: 24px;
    height: 24px;
    color: var(--primary);
    flex-shrink: 0;
  }

  .info-box h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
  }

  .info-box p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-light);
    line-height: 1.5;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    border: none;
    transition: all 0.2s;
  }

  .btn svg {
    width: 18px;
    height: 18px;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-dark, #164024);
  }

  .btn-secondary {
    background: var(--surface);
    color: var(--text);
    border: 1px solid var(--border);
  }

  .btn-secondary:hover {
    background: var(--border);
  }
</style>
