          </thead>
          <tbody>
            {tables.map((table) => (
              <tr>
                <td>
                  <a href={`/database/table/${table.name}`} class="table-link">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <line x1="3" y1="9" x2="21" y2="9"/>
                      <line x1="9" y1="21" x2="9" y2="9"/>
                    </svg>
                    {table.name}
                  </a>
                </td>
                <td class="text-right">
                  <span class="row-count">{tableInfo[table.name as string].count.toLocaleString()}</span>
                </td>
                <td class="text-right">{tableInfo[table.name as string].columns.length}</td>
                <td class="text-right">{tableInfo[table.name as string].indexes.length}</td>
                <td class="actions-col">
                  <div class="action-buttons">
                    <a href={`/database/table/${table.name}`} class="action-btn" title="Browse Data">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                        <circle cx="12" cy="12" r="3"/>
                      </svg>
