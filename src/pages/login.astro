---
import { hashPassword, createSession, createSessionCookieHeader, getSessionCookie } from '../lib/auth';

// Check if already logged in
const existingSession = getSessionCookie(Astro.request);
if (existingSession) {
  return Astro.redirect('/');
}

let error = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const email = formData.get('email')?.toString() || '';
  const password = formData.get('password')?.toString() || '';

  const db = Astro.locals.runtime.env.DB;

  // Look up admin user
  const user = await db.prepare(
    'SELECT * FROM admin_users WHERE email = ?'
  ).bind(email).first();

  if (user) {
    // For demo: simple password check
    // In production, use bcrypt.compare
    const passwordHash = hashPassword(password);

    // Demo: accept 'admin123' as password for any admin user
    if (password === 'admin123' || user.password_hash === passwordHash) {
      const session = createSession(user.email as string, user.name as string, user.role as string);
      const cookie = createSessionCookieHeader(session);

      // Update last login
      await db.prepare(
        'UPDATE admin_users SET last_login = datetime("now") WHERE id = ?'
      ).bind(user.id).run();

      return new Response(null, {
        status: 302,
        headers: {
          'Location': '/',
          'Set-Cookie': cookie
        }
      });
    }
  }

  error = 'Invalid email or password';
}
