---
import MemberLayout from '../../../layouts/MemberLayout.astro';

const db = Astro.locals.runtime?.env?.DB;
const url = new URL(Astro.request.url);
const activeCategory = url.searchParams.get('category') || 'all';

const categories = [
  { key: 'all', label: 'All' },
  { key: 'AGM', label: 'AGM' },
  { key: 'Committee', label: 'Committee' },
  { key: 'General', label: 'General' },
];

let documents: any[] = [];
let years: number[] = [];

if (db) {
  try {
    let query = `SELECT id, title, category, document_url, document_date, description
                 FROM member_documents
                 WHERE published = 1`;
    const params: any[] = [];
    if (activeCategory !== 'all') {
      query += ' AND category = ?';
      params.push(activeCategory);
    }
    query += ' ORDER BY document_date DESC';

    const result = params.length
      ? await db.prepare(query).bind(...params).all()
      : await db.prepare(query).all();
    documents = result.results || [];

    // Extract unique years
    const yearSet = new Set<number>();
    for (const doc of documents) {
      if (doc.document_date) {
        yearSet.add(new Date(doc.document_date).getFullYear());
      }
    }
    years = Array.from(yearSet).sort((a, b) => b - a);
  } catch (e) {
    console.error('Error fetching documents:', e);
  }
}

function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' });
}

function getDocsByYear(year: number): any[] {
  return documents.filter(doc =>
    doc.document_date && new Date(doc.document_date).getFullYear() === year
  );
}

const categoryLabels: Record<string, string> = {
  'AGM': 'AGM',
  'Committee': 'Committee',
  'General': 'General',
};
---

<MemberLayout title="Meeting Minutes & Documents">
  <div class="minutes-page">
    <div class="minutes-header">
      <a href="/members/documents" class="back-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
          <path d="M19 12H5"/><polyline points="12 19 5 12 12 5"/>
        </svg>
        Back to Documents
      </a>
      <p>Browse all meeting minutes and documents by category and year.</p>
    </div>

    <!-- Category tabs -->
    <div class="tab-bar">
      {categories.map(cat => (
        <a
          href={cat.key === 'all' ? '/members/documents/minutes' : `/members/documents/minutes?category=${cat.key}`}
          class={`tab ${activeCategory === cat.key ? 'active' : ''}`}
        >
          {cat.label}
        </a>
      ))}
    </div>

    {documents.length > 0 ? (
      <div class="years-container">
        {years.map(year => {
          const yearDocs = getDocsByYear(year);
          return yearDocs.length > 0 ? (
            <div class="year-section" id={`year-${year}`}>
              <h2 class="year-heading">{year}</h2>
              <div class="document-list">
                {yearDocs.map((doc: any) => (
                  <a href={doc.document_url} target="_blank" rel="noopener noreferrer" class="document-item">
                    <div class="document-icon">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                        <polyline points="14 2 14 8 20 8"/>
                        <line x1="16" y1="13" x2="8" y2="13"/>
                        <line x1="16" y1="17" x2="8" y2="17"/>
                      </svg>
                    </div>
                    <div class="document-info">
                      <span class="document-title">{doc.title}</span>
                      <div class="document-meta">
                        <span class="document-date">{formatDate(doc.document_date)}</span>
                        {activeCategory === 'all' && (
                          <span class="category-badge">{categoryLabels[doc.category] || doc.category}</span>
                        )}
                      </div>
                      {doc.description && <p class="document-desc">{doc.description}</p>}
                    </div>
                    <div class="document-action">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                        <polyline points="15 3 21 3 21 9"/>
                        <line x1="10" y1="14" x2="21" y2="3"/>
                      </svg>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ) : null;
        })}
      </div>
    ) : (
      <div class="empty-state">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
          <polyline points="14 2 14 8 20 8"/>
        </svg>
        <h3>No Documents</h3>
        <p>No documents have been uploaded for this category yet.</p>
      </div>
    )}
  </div>

  <style>
    .minutes-page {
      max-width: 900px;
    }

    .minutes-header {
      margin-bottom: 1.5rem;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-light);
      text-decoration: none;
      font-size: 0.9rem;
      margin-bottom: 0.75rem;
    }

    .back-link:hover {
      color: var(--primary);
    }

    .minutes-header p {
      margin: 0;
      color: var(--text-light);
      font-size: 1rem;
    }

    /* Category tabs */
    .tab-bar {
      display: flex;
      gap: 0.25rem;
      background: var(--white);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 0.375rem;
      margin-bottom: 2rem;
      overflow-x: auto;
    }

    .tab {
      padding: 0.5rem 1.25rem;
      border-radius: 8px;
      font-size: 0.9rem;
      font-weight: 500;
      text-decoration: none;
      color: var(--text-light);
      transition: all 0.2s;
      white-space: nowrap;
    }

    .tab:hover {
      color: var(--text);
      background: var(--surface);
    }

    .tab.active {
      background: var(--primary);
      color: white;
    }

    /* Year sections */
    .years-container {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .year-heading {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--primary);
      margin: 0 0 1rem 0;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid var(--primary);
      display: inline-block;
    }

    .document-list {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .document-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem 1.25rem;
      background: var(--white);
      border: 1px solid var(--border);
      border-radius: 12px;
      text-decoration: none;
      color: inherit;
      transition: all 0.2s;
    }

    .document-item:hover {
      border-color: var(--primary);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .document-item:hover .document-title {
      color: var(--primary);
    }

    .document-item:hover .document-action {
      color: var(--primary);
    }

    .document-icon {
      width: 40px;
      height: 40px;
      background: var(--primary-light, #e8f5e9);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .document-icon svg {
      width: 20px;
      height: 20px;
      color: var(--primary);
    }

    .document-info {
      flex: 1;
      min-width: 0;
    }

    .document-title {
      display: block;
      font-weight: 500;
      font-size: 0.95rem;
      margin-bottom: 0.25rem;
      transition: color 0.2s;
    }

    .document-meta {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 0.85rem;
    }

    .document-date {
      color: var(--text-light);
    }

    .category-badge {
      padding: 0.1rem 0.5rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 500;
      background: #e0e7ff;
      color: #3730a3;
    }

    .document-desc {
      margin: 0.375rem 0 0;
      font-size: 0.85rem;
      color: var(--text-light);
      line-height: 1.4;
    }

    .document-action {
      color: var(--text-light);
      flex-shrink: 0;
      transition: color 0.2s;
    }

    /* Empty state */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      background: var(--white);
      border: 1px solid var(--border);
      border-radius: 16px;
    }

    .empty-state svg {
      width: 64px;
      height: 64px;
      color: var(--text-light);
      opacity: 0.4;
      margin-bottom: 1rem;
    }

    .empty-state h3 {
      margin: 0 0 0.5rem 0;
    }

    .empty-state p {
      margin: 0;
      color: var(--text-light);
    }
  </style>
</MemberLayout>
