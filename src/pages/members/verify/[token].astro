---
import PublicLayout from '../../../layouts/PublicLayout.astro';
import { verifyRegistration } from '../../../lib/member-auth';

const { token } = Astro.params;
const db = Astro.locals.runtime?.env?.DB;

let error = '';
let verifying = true;

if (!token) {
  error = 'Invalid verification link.';
  verifying = false;
} else if (!db) {
  error = 'Database unavailable. Please try again later.';
  verifying = false;
} else {
  const result = await verifyRegistration(token, db);

  if (result.success && result.sessionToken) {
    // Set session cookie (1 year)
    Astro.cookies.set('avgc_member_session', result.sessionToken, {
      httpOnly: true,
      secure: import.meta.env.PROD,
      sameSite: 'strict',
      path: '/',
      maxAge: 365 * 24 * 60 * 60
    });

    return Astro.redirect('/members');
  } else {
    error = result.error || 'Invalid or expired verification link.';
    verifying = false;
  }
}
---

<PublicLayout
  title="Verify Email"
  description="Verifying your email address"
  heroTitle="Members Area"
  heroSubtitle="Email Verification"
>
  <div class="content">
    <section class="section">
      <div class="verify-container">
        <div class="verify-card">
          {verifying ? (
            <div class="verify-loading">
              <div class="spinner"></div>
              <h2>Verifying your email...</h2>
              <p>Please wait while we verify your email address.</p>
            </div>
          ) : (
            <div class="verify-error">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
                <line x1="12" y1="16" x2="12.01" y2="16"/>
              </svg>
              <h2>Verification Failed</h2>
              <p>{error}</p>
              <a href="/members/login" class="btn btn-primary">
                Back to Login
              </a>
            </div>
          )}
        </div>
      </div>
    </section>
  </div>

  <style>
    .verify-container {
      max-width: 500px;
      margin: 0 auto;
    }

    .verify-card {
      background: var(--white);
      border-radius: 16px;
      padding: 3rem 2rem;
      border: 1px solid var(--border);
      text-align: center;
    }

    .verify-loading {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .spinner {
      width: 48px;
      height: 48px;
      border: 4px solid var(--border);
      border-top-color: var(--primary);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .verify-loading h2 {
      margin: 0;
      font-size: 1.25rem;
    }

    .verify-loading p {
      margin: 0;
      color: var(--text-light);
    }

    .verify-error {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .verify-error svg {
      width: 64px;
      height: 64px;
      color: #dc2626;
    }

    .verify-error h2 {
      margin: 0;
      font-size: 1.5rem;
      color: #dc2626;
    }

    .verify-error p {
      margin: 0 0 1rem 0;
      color: var(--text-light);
      font-size: 1rem;
    }
  </style>
</PublicLayout>
