      text-align: left;
      padding: 0.625rem 0.75rem;
      font-weight: 600;
      color: var(--text-light, #666);
      border-bottom: 2px solid var(--border, #e0e0e0);
      white-space: nowrap;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }

