        display: block;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border, #e0e0e0);
      }

      .data-table td {
        display: flex;
        justify-content: space-between;
        padding: 0.25rem 0;
        border: none;
      }

      .data-table td::before {
        content: attr(data-label);
        font-weight: 600;
        color: var(--text-light, #666);
        font-size: 0.8rem;
      }
    }

