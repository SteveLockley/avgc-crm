    .analysis-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1rem;
    }

    @media (max-width: 480px) {
      .analysis-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    .hole-card {
      background: var(--surface, #f5f5f5);
      border-radius: 12px;
