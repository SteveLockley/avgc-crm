      margin-bottom: 0.5rem;
    }

    .purse-value {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--primary, #1e5631);
      line-height: 1;
    }

    .purse-label {
      font-size: 0.85rem;
      color: var(--text-light, #666);
      margin: 0;
    }

    /* Tabs */
    .tabs-section {
      background: var(--white, #fff);
      border: 1px solid var(--border, #e0e0e0);
      border-radius: 16px;
      overflow: hidden;
      margin-bottom: 1.5rem;
    }

    .tabs-nav {
      display: flex;
      border-bottom: 1px solid var(--border, #e0e0e0);
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .tabs-nav::-webkit-scrollbar {
      display: none;
    }

    .tab-btn {
      flex-shrink: 0;
      padding: 0.875rem 1.25rem;
      border: none;
      background: none;
      font-size: 0.9rem;
      font-weight: 500;
      color: var(--text-light, #666);
      cursor: pointer;
      border-bottom: 2px solid transparent;
      transition: all 0.2s;
      white-space: nowrap;
      min-height: 44px;
    }

