---
import MemberLayout from '../../layouts/MemberLayout.astro';
import { formatCurrency } from '../../lib/db';
import {
  isMsbConfigured,
  getHandicapList,
  getPlayerHandicapRecord,
  getFixtureList,
  findPlayerByNationalId,
  formatHandicap,
} from '../../lib/masterscoreboard';

const member = Astro.locals.member;
const db = (Astro.locals as any).runtime?.env?.DB;
const env = (Astro.locals as any).runtime?.env;

// Fetch full member details from DB
let memberDetails: any = null;
if (db && member?.id) {
  try {
    memberDetails = await db.prepare(
      `SELECT * FROM members WHERE id = ?`
    ).bind(member.id).first();
  } catch (e) {
    console.error('Error fetching member details:', e);
  }
}

// Fetch MSB data
let msbPlayer: any = null;
let msbPlayerId: number | null = null;
let handicapRecord: any = null;
let fixtures: any = null;
let msbError = '';
const msbConfigured = isMsbConfigured(env);

if (msbConfigured && memberDetails?.national_id) {
  try {
    const handicapList = await getHandicapList(env);
    msbPlayer = findPlayerByNationalId(handicapList, memberDetails.national_id);
    if (msbPlayer) {
      msbPlayerId = msbPlayer.playerId;

      // Fetch handicap record
      if (msbPlayerId) {
        handicapRecord = await getPlayerHandicapRecord(env, msbPlayerId);
      }

      // Sync handicap index to DB if changed
      // MSB returns handicap as string: "30.8", "-" (no index), "Away", or "+2.1" (plus handicap)
      const msbHcapStr = msbPlayer.handicap;
      if (msbHcapStr && msbHcapStr !== '-' && msbHcapStr !== 'Away') {
        // Convert "+2.1" display format back to -2.1 for storage
        const numVal = msbHcapStr.startsWith('+')
          ? -parseFloat(msbHcapStr.substring(1))
          : parseFloat(msbHcapStr);
        if (!isNaN(numVal) && db && memberDetails.handicap_index !== numVal) {
          try {
            await db.prepare(
              `UPDATE members SET handicap_index = ?, updated_at = datetime('now') WHERE id = ?`
            ).bind(numVal, member.id).run();
            memberDetails.handicap_index = numVal;
          } catch (e) {
            console.error('Error syncing handicap:', e);
          }
        }
      }
    }

    // Fetch upcoming fixtures
    fixtures = await getFixtureList(env);
  } catch (e: any) {
    console.error('MSB API error:', e);
    msbError = e?.message || 'Failed to connect to Master Scoreboard';
  }
}

const handicapIndex = memberDetails?.handicap_index;
const purseBalance = memberDetails?.competition_fee_purse ?? 0;
const nationalId = memberDetails?.national_id || '';
const effectiveDate = '';

// Get next 5 fixtures â€” API returns {month: [{monthTitle, entry: [{date, title, subTitle, ...}]}]}
let upcomingFixtures: any[] = [];
if (fixtures?.month && Array.isArray(fixtures.month)) {
  for (const m of fixtures.month) {
    if (m.entry && Array.isArray(m.entry)) {
      for (const e of m.entry) {
        upcomingFixtures.push(e);
        if (upcomingFixtures.length >= 5) break;
      }
    }
    if (upcomingFixtures.length >= 5) break;
  }
}
---

<MemberLayout title="My Golf">
