    {!msbPlayerId && !msbError && msbConfigured && (
      <div class="alert alert-info" style="margin-top: 1.5rem">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/>
        </svg>
        <span>We couldn't find your player record on Master Scoreboard. Please ensure your National ID is set correctly in your account.</span>
      </div>
    )}

    <!-- Upcoming Fixtures -->
    {upcomingFixtures.length > 0 && (
      <div class="fixtures-section">
        <h2>Upcoming Competitions</h2>
        <div class="fixtures-list">
          {upcomingFixtures.map((f: any) => (
            <div class="fixture-item">
              <div class="fixture-date">
                {f.date || ''}
              </div>
              <div class="fixture-details">
                <span class="fixture-name">{f.title || ''}</span>
                {f.subTitle && (
                  <span class="fixture-type">{f.subTitle}</span>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- External link fallback -->
    <div class="external-link">
      <a href="https://www.masterscoreboard.co.uk/ClubIndex.php?CWID=1027" target="_blank" rel="noopener noreferrer" class="btn-secondary">
        View Full Details on Master Scoreboard
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/>
        </svg>
      </a>
    </div>
  </div>

  <script is:inline define:vars={{ msbPlayerId }}>
    if (msbPlayerId) {
      const tabs = document.querySelectorAll('.tab-btn');
      const panels = document.querySelectorAll('.tab-panel');
      const loaded = {};

      tabs.forEach(btn => {
        btn.addEventListener('click', () => {
          tabs.forEach(t => { t.classList.remove('active'); t.setAttribute('aria-selected', 'false'); });
          panels.forEach(p => p.classList.remove('active'));
          btn.classList.add('active');
          btn.setAttribute('aria-selected', 'true');
          const tab = btn.dataset.tab;
          document.getElementById('tab-' + tab).classList.add('active');
          if (!loaded[tab]) loadTab(tab);
        });
      });

      // Load first tab
      loadTab('history');

      async function loadTab(tab) {
        loaded[tab] = true;
        const panel = document.getElementById('tab-' + tab);
        const loading = panel.querySelector('.loading-state');
        const table = panel.querySelector('.data-table');
        const grid = panel.querySelector('.analysis-grid');
        const empty = panel.querySelector('.empty-state');

        try {
          let url, data;
          if (tab === 'history') {
            url = '/api/msb/player/' + msbPlayerId + '/play-record';
          } else if (tab === 'handicap-scores') {
            url = '/api/msb/player/' + msbPlayerId + '/handicap-record';
          } else if (tab === 'analysis') {
            url = '/api/msb/player/' + msbPlayerId + '/scores';
          }

          const res = await fetch(url);
          if (!res.ok) throw new Error('Failed to load data');
          data = await res.json();

          if (loading) loading.style.display = 'none';

          if (tab === 'history') {
            // API returns {headings: {"1":"Date","2":"Competition",...}, rows: [{"1":"7 Jun 22","2":"Medal",...}]}
            const rows = data.rows || [];
            const headings = data.headings || {};
            if (rows.length === 0) {
              if (empty) empty.style.display = 'block';
              return;
            }
            // Build dynamic table from numbered columns
            const keys = Object.keys(headings).sort((a,b) => parseInt(a) - parseInt(b));
            const thead = table.querySelector('thead tr');
            thead.innerHTML = keys.map(k => '<th>' + headings[k] + '</th>').join('');
            const tbody = table.querySelector('tbody');
            tbody.innerHTML = rows.map(r =>
              '<tr>' + keys.map(k => '<td data-label="' + headings[k] + '">' + (r[k] || '') + '</td>').join('') + '</tr>'
            ).join('');
            table.style.display = '';
            if (data.note) {
              const noteEl = document.createElement('p');
              noteEl.style.cssText = 'margin:0.75rem 0 0;color:var(--text-light,#666);font-size:0.8rem';
              noteEl.textContent = data.note;
              table.parentElement.appendChild(noteEl);
            }
          } else if (tab === 'handicap-scores') {
            // Same numbered columns format
            const rows = data.rows || [];
            const headings = data.headings || {};
            if (rows.length === 0) {
              if (empty) empty.style.display = 'block';
              return;
            }
            const keys = Object.keys(headings).sort((a,b) => parseInt(a) - parseInt(b));
            const thead = table.querySelector('thead tr');
            thead.innerHTML = keys.map(k => '<th>' + headings[k] + '</th>').join('');
            const tbody = table.querySelector('tbody');
            tbody.innerHTML = rows.map(r =>
              '<tr>' + keys.map(k => '<td data-label="' + headings[k] + '">' + (r[k] || '') + '</td>').join('') + '</tr>'
            ).join('');
            table.style.display = '';
            // Show mandatory notice
            if (data.mandatoryNotice) {
              const notice = document.createElement('p');
              notice.style.cssText = 'margin:0.75rem 0 0;color:var(--text-light,#666);font-size:0.8rem;font-style:italic';
              notice.textContent = data.mandatoryNotice;
              table.parentElement.appendChild(notice);
            }
          } else if (tab === 'analysis') {
            // API returns {courses: [{courseName, scores: [{compName, date, holes: [{hole, score, result}]}], summary: {lowestScores, highestScores}}]}
            const courses = data.courses || [];
            if (courses.length === 0) {
              if (empty) empty.style.display = 'block';
              return;
            }
            let html = '';
            courses.forEach(function(course) {
              html += '<h4 style="margin:0 0 1rem;font-size:1rem">' + course.courseName + '</h4>';
              // Show summary: best scores per hole
              if (course.summary && course.summary.lowestScores) {
                html += '<div class="analysis-grid">';
                course.summary.lowestScores.forEach(function(h) {
                  var best = h.score || '';
                  var bestResult = h.result || '';
                  var worst = '';
                  if (course.summary.highestScores) {
                    var highHole = course.summary.highestScores.find(function(x) { return x.hole === h.hole; });
                    if (highHole) worst = highHole.score || '';
                  }
                  var resultClass = '';
                  if (bestResult === '-1') resultClass = 'birdie';
                  else if (bestResult === '-2<' || bestResult.startsWith('-')) resultClass = 'birdie';
                  else if (bestResult === '0') resultClass = 'par';
                  else if (bestResult === '+1') resultClass = 'bogey';
                  else resultClass = 'double';
                  html += '<div class="hole-card">' +
                    '<div class="hole-number">Hole ' + h.hole + '</div>' +
                    '<div class="hole-stats">' +
                    '<div class="stat"><span class="stat-label">Best</span><span class="stat-value ' + resultClass + '">' + best + '</span></div>' +
                    '<div class="stat"><span class="stat-label">Worst</span><span class="stat-value">' + worst + '</span></div>' +
                    '</div></div>';
                });
                html += '</div>';
              }
              // Show round-by-round scores
              if (course.scores && course.scores.length > 0) {
                html += '<details style="margin-top:1rem"><summary style="cursor:pointer;font-weight:500;font-size:0.9rem;color:var(--primary,#1e5631);margin-bottom:0.75rem">' + course.scores.length + ' round(s) played</summary>';
                course.scores.forEach(function(round) {
                  html += '<div style="margin-bottom:1rem"><p style="margin:0 0 0.5rem;font-weight:500;font-size:0.85rem">' + round.compName + ' (' + round.date + ')</p>';
                  html += '<div style="display:flex;flex-wrap:wrap;gap:0.25rem">';
                  if (round.holes) {
                    round.holes.forEach(function(h) {
                      var cls = h.result === '0' ? 'par' : (h.result === '-1' || h.result === '-2<') ? 'birdie' : h.result === '+1' ? 'bogey' : 'double';
                      html += '<span style="display:inline-block;width:2rem;text-align:center;padding:0.25rem;border-radius:4px;font-size:0.8rem" class="score-' + cls + '">' + (h.score || '') + '</span>';
                    });
                  }
                  html += '</div></div>';
                });
                html += '</details>';
              }
            });
            grid.innerHTML = html;
            grid.style.display = '';
          }
        } catch (err) {
          if (loading) loading.style.display = 'none';
          if (empty) {
            empty.textContent = 'Failed to load data. Please try again later.';
            empty.style.display = 'block';
          }
        }
      }

      function fmtHcap(v) {
        if (v === null || v === undefined || v === '') return 'N/A';
        var n = typeof v === 'string' ? parseFloat(v) : v;
        if (isNaN(n)) return 'N/A';
        if (n < 0) return '+' + Math.abs(n).toFixed(1);
        return n.toFixed(1);
      }

      function formatAvg(v) {
        if (v === null || v === undefined || v === '') return '-';
        var n = typeof v === 'string' ? parseFloat(v) : v;
        if (isNaN(n)) return '-';
        return n.toFixed(2);
      }
    }
  </script>

  <style>
    .my-golf {
      max-width: 1000px;
    }

    /* Alerts */
    .alert {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      padding: 1rem 1.25rem;
      border-radius: 12px;
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
    }

