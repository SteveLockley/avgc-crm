---
import PublicLayout from '../../layouts/PublicLayout.astro';

// Check if already logged in
const sessionToken = Astro.cookies.get('avgc_member_session')?.value;
if (sessionToken) {
  const db = Astro.locals.runtime?.env?.DB;
  if (db) {
    const session = await db.prepare(
      `SELECT member_id FROM member_sessions WHERE session_token = ? AND expires_at > datetime('now')`
    ).bind(sessionToken).first();
    if (session) {
      return Astro.redirect('/members');
    }
  }
}

// Check for query params (e.g. after password reset)
const resetSuccess = Astro.url.searchParams.get('reset') === 'success';
---

<PublicLayout
  title="Member Login"
  description="Sign in to the Alnmouth Village Golf Club members area"
  heroTitle="Members Area"
  heroSubtitle="Sign in to access exclusive member features"
>
  <div class="content">
    <section class="section">
      <div class="login-container">
        <div class="login-card">
          <div class="login-header">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
            <h2 id="form-title">Member Sign In</h2>
            <p id="form-subtitle">Enter your email and password to access the members area.</p>
          </div>

          <!-- Alert area -->
          <div id="alert-box" class="alert" style="display: none;">
            <svg id="alert-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="8" x2="12" y2="12"/>
              <line x1="12" y1="16" x2="12.01" y2="16"/>
            </svg>
            <span id="alert-text"></span>
          </div>

          {resetSuccess && (
            <div class="alert alert-success">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <span>Your password has been reset. You can now sign in.</span>
            </div>
          )}

          <!-- Login Form -->
          <form id="login-form" class="login-form">
            <div class="form-group">
              <label for="login-email">Email Address</label>
              <input
                type="email"
                id="login-email"
                placeholder="your.email@example.com"
                required
                autocomplete="email"
              />
            </div>
            <div class="form-group">
              <label for="login-password">Password</label>
              <input
                type="password"
                id="login-password"
                placeholder="Enter your password"
                required
                autocomplete="current-password"
                minlength="8"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block" id="login-btn">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon-default">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
              </svg>
              <span class="btn-text">Sign In</span>
            </button>
            <div class="form-links">
              <a href="#" id="show-register">First time? Create account</a>
              <a href="#" id="show-forgot">Forgot password?</a>
            </div>
          </form>

          <!-- Register Form -->
          <form id="register-form" class="login-form" style="display: none;">
            <div class="form-group">
              <label for="reg-email">Email Address</label>
              <input
                type="email"
                id="reg-email"
                placeholder="your.email@example.com"
                required
                autocomplete="email"
              />
              <span class="form-hint">Must match the email on your club membership.</span>
            </div>
            <div class="form-group">
              <label for="reg-password">Password</label>
              <input
                type="password"
                id="reg-password"
                placeholder="Choose a password (min. 8 characters)"
                required
                autocomplete="new-password"
                minlength="8"
              />
            </div>
            <div class="form-group">
              <label for="reg-confirm">Confirm Password</label>
              <input
                type="password"
                id="reg-confirm"
                placeholder="Confirm your password"
                required
                autocomplete="new-password"
                minlength="8"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block" id="register-btn">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon-default">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="8.5" cy="7" r="4"/>
                <line x1="20" y1="8" x2="20" y2="14"/>
                <line x1="23" y1="11" x2="17" y2="11"/>
              </svg>
              <span class="btn-text">Create Account</span>
            </button>
            <div class="form-links">
              <a href="#" id="show-login-from-register">Already have an account? Sign in</a>
            </div>
          </form>

          <!-- Forgot Password Form -->
          <form id="forgot-form" class="login-form" style="display: none;">
            <div class="form-group">
              <label for="forgot-email">Email Address</label>
              <input
                type="email"
                id="forgot-email"
                placeholder="your.email@example.com"
                required
                autocomplete="email"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block" id="forgot-btn">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon-default">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
              <span class="btn-text">Send Reset Link</span>
            </button>
            <div class="form-links">
              <a href="#" id="show-login-from-forgot">Back to sign in</a>
            </div>
          </form>

          <div class="login-help">
            <p>Having trouble? Contact us at <a href="mailto:Manager@AlnmouthVillage.Golf">Manager@AlnmouthVillage.Golf</a></p>
          </div>
        </div>

        <div class="member-benefits">
          <h3>Member Benefits</h3>
          <ul>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              Book tee times online
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              View competition results
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              Access member documents
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              Make payments online
            </li>
          </ul>
        </div>
      </div>
    </section>
  </div>

  <script is:inline>
    const loginForm = document.getElementById('login-form');
    const registerForm = document.getElementById('register-form');
    const forgotForm = document.getElementById('forgot-form');
    const formTitle = document.getElementById('form-title');
    const formSubtitle = document.getElementById('form-subtitle');
    const alertBox = document.getElementById('alert-box');
    const alertIcon = document.getElementById('alert-icon');
    const alertText = document.getElementById('alert-text');

    function showAlert(message, type) {
      alertBox.className = 'alert alert-' + type;
      alertBox.style.display = 'flex';
      alertText.textContent = message;
      if (type === 'success') {
        alertIcon.innerHTML = '<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>';
      } else {
        alertIcon.innerHTML = '<circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/>';
      }
    }

    function hideAlert() {
      alertBox.style.display = 'none';
    }

    function showForm(form, title, subtitle) {
      loginForm.style.display = 'none';
      registerForm.style.display = 'none';
      forgotForm.style.display = 'none';
      form.style.display = 'flex';
      formTitle.textContent = title;
      formSubtitle.textContent = subtitle;
      hideAlert();
    }

    // Toggle links
    document.getElementById('show-register').addEventListener('click', function(e) {
      e.preventDefault();
      showForm(registerForm, 'Create Account', 'Register using the email address on your club membership.');
    });

    document.getElementById('show-forgot').addEventListener('click', function(e) {
      e.preventDefault();
      showForm(forgotForm, 'Reset Password', 'Enter your email and we\'ll send you a password reset link.');
    });

    document.getElementById('show-login-from-register').addEventListener('click', function(e) {
      e.preventDefault();
      showForm(loginForm, 'Member Sign In', 'Enter your email and password to access the members area.');
    });

    document.getElementById('show-login-from-forgot').addEventListener('click', function(e) {
      e.preventDefault();
      showForm(loginForm, 'Member Sign In', 'Enter your email and password to access the members area.');
    });

    // Login
    loginForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      const btn = document.getElementById('login-btn');
      const btnText = btn.querySelector('.btn-text');
      btn.disabled = true;
      btnText.textContent = 'Signing in...';
      hideAlert();

      try {
        const res = await fetch('/api/member-auth', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            action: 'login',
            email: document.getElementById('login-email').value,
            password: document.getElementById('login-password').value
          })
        });
        const data = await res.json();
        if (data.success) {
          window.location.href = '/members';
        } else {
          showAlert(data.error || 'Login failed.', 'error');
          btn.disabled = false;
          btnText.textContent = 'Sign In';
        }
      } catch (err) {
        showAlert('Something went wrong. Please try again.', 'error');
        btn.disabled = false;
        btnText.textContent = 'Sign In';
      }
    });

    // Register
    registerForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      const password = document.getElementById('reg-password').value;
      const confirm = document.getElementById('reg-confirm').value;

      if (password !== confirm) {
        showAlert('Passwords do not match.', 'error');
        return;
      }
      if (password.length < 8) {
        showAlert('Password must be at least 8 characters.', 'error');
        return;
      }

      const btn = document.getElementById('register-btn');
      const btnText = btn.querySelector('.btn-text');
      btn.disabled = true;
      btnText.textContent = 'Creating account...';
      hideAlert();

      try {
        const res = await fetch('/api/member-auth', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            action: 'register',
            email: document.getElementById('reg-email').value,
            password: password
          })
        });
        const data = await res.json();
        if (data.success) {
          showAlert('A verification email has been sent. Please check your inbox and click the link to complete registration.', 'success');
          btn.disabled = false;
          btnText.textContent = 'Create Account';
        } else {
          showAlert(data.error || 'Registration failed.', 'error');
          btn.disabled = false;
          btnText.textContent = 'Create Account';
        }
      } catch (err) {
        showAlert('Something went wrong. Please try again.', 'error');
        btn.disabled = false;
        btnText.textContent = 'Create Account';
      }
    });

    // Forgot Password
    forgotForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      const btn = document.getElementById('forgot-btn');
      const btnText = btn.querySelector('.btn-text');
      btn.disabled = true;
      btnText.textContent = 'Sending...';
      hideAlert();

      try {
        const res = await fetch('/api/member-auth', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            action: 'forgot-password',
            email: document.getElementById('forgot-email').value
          })
        });
        const data = await res.json();
        showAlert('If your email is registered, you will receive a reset link shortly. Please check your inbox.', 'success');
        btn.disabled = false;
        btnText.textContent = 'Send Reset Link';
      } catch (err) {
        showAlert('Something went wrong. Please try again.', 'error');
        btn.disabled = false;
        btnText.textContent = 'Send Reset Link';
      }
    });
  </script>

  <style>
    .login-container {
      max-width: 900px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    @media (min-width: 768px) {
      .login-container {
        grid-template-columns: 1fr 1fr;
        align-items: start;
      }
    }

    .login-card {
      background: var(--white);
      border-radius: 16px;
      padding: 2rem;
      border: 1px solid var(--border);
    }

    .login-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .login-header svg {
      width: 48px;
      height: 48px;
      color: var(--primary);
      margin-bottom: 1rem;
    }

    .login-header h2 {
      margin: 0 0 0.5rem 0;
      font-size: 1.5rem;
    }

    .login-header p {
      margin: 0;
      color: var(--text-light);
      font-size: 0.95rem;
    }

    .alert {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      font-size: 0.95rem;
    }

    .alert svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
      margin-top: 2px;
    }

    .alert-success {
      background: #dcfce7;
      color: #166534;
    }

    .alert-error {
      background: #fee2e2;
      color: #991b1b;
    }

    .login-form {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .form-group label {
      font-weight: 500;
      font-size: 0.95rem;
    }

    .form-group input {
      padding: 0.875rem 1rem;
      border: 1px solid var(--border);
      border-radius: 8px;
      font-size: 1rem;
      transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-group input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(30, 86, 49, 0.1);
    }

    .form-hint {
      font-size: 0.8rem;
      color: var(--text-light);
    }

    .btn-block {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.875rem 1.5rem;
    }

    .btn-block svg {
      width: 20px;
      height: 20px;
    }

    .form-links {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .form-links a {
      font-size: 0.9rem;
      color: var(--primary);
      text-decoration: none;
    }

    .form-links a:hover {
      text-decoration: underline;
    }

    .login-help {
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid var(--border);
      text-align: center;
      font-size: 0.9rem;
      color: var(--text-light);
    }

    .login-help p {
      margin: 0.5rem 0;
    }

    .login-help a {
      color: var(--primary);
    }

    .member-benefits {
      background: var(--surface);
      border-radius: 16px;
      padding: 2rem;
    }

    .member-benefits h3 {
      margin: 0 0 1.5rem 0;
      font-size: 1.25rem;
      color: var(--primary);
    }

    .member-benefits ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .member-benefits li {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 0.95rem;
    }

    .member-benefits li svg {
      width: 20px;
      height: 20px;
      color: var(--primary);
      flex-shrink: 0;
    }
  </style>
</PublicLayout>
