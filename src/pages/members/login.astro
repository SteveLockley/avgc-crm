---
import PublicLayout from '../../layouts/PublicLayout.astro';

// Check if already logged in
const sessionToken = Astro.cookies.get('avgc_member_session')?.value;
if (sessionToken) {
  // Validate session
  const db = Astro.locals.runtime?.env?.DB;
  if (db) {
    const session = await db.prepare(
      `SELECT member_id FROM member_sessions WHERE session_token = ? AND expires_at > datetime('now')`
    ).bind(sessionToken).first();
    if (session) {
      return Astro.redirect('/members');
    }
  }
}

// Handle form submission
let message = '';
let messageType: 'success' | 'error' | '' = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const email = formData.get('email')?.toString().trim();

  if (!email) {
    message = 'Please enter your email address.';
    messageType = 'error';
  } else {
    // Call the API to send magic link
    const baseUrl = new URL(Astro.request.url).origin;
    const response = await fetch(`${baseUrl}/api/member-auth`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ action: 'request-link', email })
    });

    const result = await response.json();

    if (result.success) {
      message = 'If your email is registered, you will receive a login link shortly. Please check your inbox.';
      messageType = 'success';
    } else {
      message = result.error || 'Something went wrong. Please try again.';
      messageType = 'error';
    }
  }
}
---

<PublicLayout
  title="Member Login"
  description="Sign in to the Alnmouth Village Golf Club members area"
  heroTitle="Members Area"
  heroSubtitle="Sign in to access exclusive member features"
>
  <div class="content">
    <section class="section">
      <div class="login-container">
        <div class="login-card">
          <div class="login-header">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
            <h2>Member Sign In</h2>
            <p>Enter your email address and we'll send you a secure login link.</p>
          </div>

          {message && (
            <div class={`alert alert-${messageType}`}>
              {messageType === 'success' ? (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
              ) : (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <line x1="12" y1="8" x2="12" y2="12"/>
                  <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
              )}
              <span>{message}</span>
            </div>
          )}

          <form method="POST" class="login-form" id="login-form">
            <div class="form-group">
              <label for="email">Email Address</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="your.email@example.com"
                required
                autocomplete="email"
              />
            </div>

            <button type="submit" class="btn btn-primary btn-block" id="submit-btn">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon-default">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
              <span class="btn-text">Send Login Link</span>
            </button>
          </form>

          <script>
            // Prevent double submission
            const form = document.getElementById('login-form');
            const btn = document.getElementById('submit-btn');
            const btnText = btn?.querySelector('.btn-text');
            let isSubmitting = false;

            form?.addEventListener('submit', (e) => {
              if (isSubmitting) {
                e.preventDefault();
                return;
              }
              isSubmitting = true;
              if (btn) btn.disabled = true;
              if (btnText) btnText.textContent = 'Sending...';
            });
          </script>

          <div class="login-help">
            <p>Your login link will expire in 15 minutes.</p>
            <p>Having trouble? Contact us at <a href="mailto:Manager@AlnmouthVillage.Golf">Manager@AlnmouthVillage.Golf</a></p>
          </div>
        </div>

        <div class="member-benefits">
          <h3>Member Benefits</h3>
          <ul>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              Book tee times online
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              View competition results
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              Access member documents
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              View your membership details
            </li>
          </ul>
        </div>
      </div>
    </section>
  </div>

  <style>
    .login-container {
      max-width: 900px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    @media (min-width: 768px) {
      .login-container {
        grid-template-columns: 1fr 1fr;
        align-items: start;
      }
    }

    .login-card {
      background: var(--white);
      border-radius: 16px;
      padding: 2rem;
      border: 1px solid var(--border);
    }

    .login-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .login-header svg {
      width: 48px;
      height: 48px;
      color: var(--primary);
      margin-bottom: 1rem;
    }

    .login-header h2 {
      margin: 0 0 0.5rem 0;
      font-size: 1.5rem;
    }

    .login-header p {
      margin: 0;
      color: var(--text-light);
      font-size: 0.95rem;
    }

    .alert {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      font-size: 0.95rem;
    }

    .alert svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
      margin-top: 2px;
    }

    .alert-success {
      background: #dcfce7;
      color: #166534;
    }

    .alert-error {
      background: #fee2e2;
      color: #991b1b;
    }

    .login-form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .form-group label {
      font-weight: 500;
      font-size: 0.95rem;
    }

    .form-group input {
      padding: 0.875rem 1rem;
      border: 1px solid var(--border);
      border-radius: 8px;
      font-size: 1rem;
      transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-group input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(30, 86, 49, 0.1);
    }

    .btn-block {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.875rem 1.5rem;
    }

    .btn-block svg {
      width: 20px;
      height: 20px;
    }

    .login-help {
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid var(--border);
      text-align: center;
      font-size: 0.9rem;
      color: var(--text-light);
    }

    .login-help p {
      margin: 0.5rem 0;
    }

    .login-help a {
      color: var(--primary);
    }

    .member-benefits {
      background: var(--surface);
      border-radius: 16px;
      padding: 2rem;
    }

    .member-benefits h3 {
      margin: 0 0 1.5rem 0;
      font-size: 1.25rem;
      color: var(--primary);
    }

    .member-benefits ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .member-benefits li {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 0.95rem;
    }

    .member-benefits li svg {
      width: 20px;
      height: 20px;
      color: var(--primary);
      flex-shrink: 0;
    }
  </style>
</PublicLayout>
