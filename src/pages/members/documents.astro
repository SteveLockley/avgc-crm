---
import MemberLayout from '../../layouts/MemberLayout.astro';

const db = Astro.locals.runtime?.env?.DB;

const policyDocuments = [
  { name: 'Articles of Association', href: '/members/documents/club-rules' },
  { name: 'Members & Visitors Code of Conduct', href: '/members/documents/members-visitors-code-of-conduct' },
  { name: 'Board Code of Conduct', href: '/members/documents/board-code-of-conduct' },
  { name: 'Equality Policy', href: '/members/documents/equality-policy' },
  { name: 'Information Security Policy', href: '/members/documents/information-security-policy' },
];

// Fetch recent documents by category
const categoryConfig = [
  { key: 'AGM', title: 'AGM Minutes', icon: 'file-text' },
  { key: 'Committee', title: 'Committee Minutes', icon: 'users' },
  { key: 'General', title: 'General Documents', icon: 'file' },
];

type DocCategory = { key: string; title: string; icon: string; documents: any[] };
let documentCategories: DocCategory[] = [];

if (db) {
  try {
    const results = await Promise.all(
      categoryConfig.map(cat =>
        db.prepare(
          `SELECT id, title, document_url, document_date, description
           FROM member_documents
           WHERE category = ? AND published = 1
           ORDER BY document_date DESC
           LIMIT 4`
        ).bind(cat.key).all()
      )
    );
    documentCategories = categoryConfig.map((cat, i) => ({
      ...cat,
      documents: results[i].results || []
    }));
  } catch (e) {
    console.error('Error fetching documents:', e);
    documentCategories = categoryConfig.map(cat => ({ ...cat, documents: [] }));
  }
} else {
  documentCategories = categoryConfig.map(cat => ({ ...cat, documents: [] }));
}

function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
}

const icons: Record<string, string> = {
  'shield': '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>',
  'file-text': '<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/>',
  'users': '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>',
  'file': '<path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"/><polyline points="13 2 13 9 20 9"/>',
  'external': '<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/>',
};
---

<MemberLayout title="Club Documents">
  <div class="documents-page">
    <div class="documents-intro">
      <p>Access important club documents, policies, meeting minutes, and more.</p>
    </div>

    <div class="document-categories">
      <!-- Club Policies -->
      <div class="document-category">
        <div class="category-header">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <Fragment set:html={icons.shield} />
          </svg>
          <h2>Club Policies</h2>
        </div>
        <div class="document-list">
          {policyDocuments.map(doc => (
            <a href={doc.href} class="document-item document-link">
              <div class="document-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <Fragment set:html={icons['file-text']} />
                </svg>
              </div>
              <div class="document-info">
                <span class="document-name">{doc.name}</span>
                <span class="document-meta">View document</span>
              </div>
              <div class="document-arrow">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Database-driven categories -->
      {documentCategories.map(category => (
        <div class="document-category">
          <div class="category-header">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <Fragment set:html={icons[category.icon]} />
            </svg>
            <h2>{category.title}</h2>
          </div>
          {category.documents.length > 0 ? (
            <>
              <div class="document-list">
                {category.documents.map((doc: any) => (
                  <a href={doc.document_url} target="_blank" rel="noopener noreferrer" class="document-item document-link">
                    <div class="document-icon">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <Fragment set:html={icons['file-text']} />
                      </svg>
                    </div>
                    <div class="document-info">
                      <span class="document-name">{doc.title}</span>
                      <span class="document-meta">{formatDate(doc.document_date)}</span>
                    </div>
                    <div class="document-arrow">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                        <Fragment set:html={icons.external} />
                      </svg>
                    </div>
                  </a>
                ))}
              </div>
              <div class="category-footer">
                <a href={`/members/documents/minutes?category=${category.key}`} class="view-all-link">
                  View all {category.title.toLowerCase()}
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
                    <polyline points="9 18 15 12 9 6"/>
                  </svg>
                </a>
              </div>
            </>
          ) : (
            <div class="empty-category">
              <p>No documents available yet.</p>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>

  <style>
    .documents-page {
      max-width: 900px;
    }

    .documents-intro {
      margin-bottom: 2rem;
    }

    .documents-intro p {
      font-size: 1.1rem;
      color: var(--text-light);
      margin: 0;
    }

    .document-categories {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .document-category {
      background: var(--white);
      border: 1px solid var(--border);
      border-radius: 16px;
      overflow: hidden;
    }

    .category-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1.25rem 1.5rem;
      background: var(--surface);
      border-bottom: 1px solid var(--border);
    }

    .category-header svg {
      width: 22px;
      height: 22px;
      color: var(--primary);
    }

    .category-header h2 {
      margin: 0;
      font-size: 1.1rem;
      color: var(--primary);
    }

    .document-list {
      padding: 0.5rem;
    }

    .document-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      border-radius: 8px;
      transition: background 0.2s;
    }

    .document-item:hover {
      background: var(--surface);
    }

    .document-link {
      text-decoration: none;
      color: inherit;
      cursor: pointer;
    }

    .document-link:hover .document-name {
      color: var(--primary);
    }

    .document-arrow {
      color: var(--text-light);
      flex-shrink: 0;
    }

    .document-link:hover .document-arrow {
      color: var(--primary);
    }

    .document-icon {
      width: 40px;
      height: 40px;
      background: var(--primary-light);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .document-icon svg {
      width: 20px;
      height: 20px;
      color: var(--primary);
    }

    .document-info {
      flex: 1;
      min-width: 0;
    }

    .document-name {
      display: block;
      font-weight: 500;
      font-size: 0.95rem;
      margin-bottom: 0.25rem;
    }

    .document-meta {
      font-size: 0.85rem;
      color: var(--text-light);
    }

    .category-footer {
      padding: 0.75rem 1.5rem;
      border-top: 1px solid var(--border);
    }

    .view-all-link {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.9rem;
      font-weight: 500;
      color: var(--primary);
      text-decoration: none;
    }

    .view-all-link:hover {
      text-decoration: underline;
    }

    .empty-category {
      padding: 2rem 1.5rem;
      text-align: center;
    }

    .empty-category p {
      margin: 0;
      color: var(--text-light);
      font-size: 0.9rem;
    }
  </style>
</MemberLayout>
