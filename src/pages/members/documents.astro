---
import MemberLayout from '../../layouts/MemberLayout.astro';

const db = Astro.locals.runtime?.env?.DB;

const policyDocuments = [
  { name: 'Club Rules', href: '/members/documents/club-rules' },
  { name: 'Members & Visitors Code of Conduct', href: '/members/documents/members-visitors-code-of-conduct' },
  { name: 'Board Code of Conduct', href: '/members/documents/board-code-of-conduct' },
  { name: 'Equality Policy', href: '/members/documents/equality-policy' },
  { name: 'Information Security Policy', href: '/members/documents/information-security-policy' },
];

const placeholderCategories = [
  {
    title: 'AGM & Minutes',
    icon: 'file-text',
    documents: [
      { name: 'AGM 2024 Minutes' },
      { name: 'AGM 2023 Minutes' },
      { name: 'AGM 2022 Minutes' },
    ]
  },
  {
    title: 'Course Information',
    icon: 'map',
    documents: [
      { name: 'Course Layout' },
      { name: 'Local Rules' },
      { name: 'Course Care Guidelines' },
    ]
  },
  {
    title: 'Newsletters',
    icon: 'mail',
    documents: [
      { name: 'Winter 2024 Newsletter' },
      { name: 'Autumn 2024 Newsletter' },
      { name: 'Summer 2024 Newsletter' },
    ]
  }
];

const icons: Record<string, string> = {
  'shield': '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>',
  'file-text': '<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/>',
  'map': '<polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"/><line x1="8" y1="2" x2="8" y2="18"/><line x1="16" y1="6" x2="16" y2="22"/>',
  'mail': '<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>',
  'download': '<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/>',
  'file': '<path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"/><polyline points="13 2 13 9 20 9"/>',
};
---

<MemberLayout title="Club Documents">
  <div class="documents-page">
    <div class="documents-intro">
      <p>Access important club documents, policies, meeting minutes, and newsletters.</p>
    </div>

    <div class="document-categories">
      <!-- Club Policies - linked to actual pages -->
      <div class="document-category">
        <div class="category-header">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <Fragment set:html={icons.shield} />
          </svg>
          <h2>Club Policies</h2>
        </div>
        <div class="document-list">
          {policyDocuments.map(doc => (
            <a href={doc.href} class="document-item document-link">
              <div class="document-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <Fragment set:html={icons['file-text']} />
                </svg>
              </div>
              <div class="document-info">
                <span class="document-name">{doc.name}</span>
                <span class="document-meta">View document</span>
              </div>
              <div class="document-arrow">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Placeholder categories -->
      {placeholderCategories.map(category => (
        <div class="document-category">
          <div class="category-header">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <Fragment set:html={icons[category.icon]} />
            </svg>
            <h2>{category.title}</h2>
          </div>
          <div class="document-list">
            {category.documents.map(doc => (
              <div class="document-item document-placeholder">
                <div class="document-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <Fragment set:html={icons.file} />
                  </svg>
                </div>
                <div class="document-info">
                  <span class="document-name">{doc.name}</span>
                  <span class="document-meta">Coming soon</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="documents-note">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"/>
        <line x1="12" y1="16" x2="12" y2="12"/>
        <line x1="12" y1="8" x2="12.01" y2="8"/>
      </svg>
      <div>
        <p>Additional documents are being added. Contact the club office for any documents you need in the meantime.</p>
        <a href="mailto:Manager@AlnmouthVillage.Golf">Manager@AlnmouthVillage.Golf</a>
      </div>
    </div>
  </div>

  <style>
    .documents-page {
      max-width: 900px;
    }

    .documents-intro {
      margin-bottom: 2rem;
    }

    .documents-intro p {
      font-size: 1.1rem;
      color: var(--text-light);
      margin: 0;
    }

    .document-categories {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .document-category {
      background: var(--white);
      border: 1px solid var(--border);
      border-radius: 16px;
      overflow: hidden;
    }

    .category-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1.25rem 1.5rem;
      background: var(--surface);
      border-bottom: 1px solid var(--border);
    }

    .category-header svg {
      width: 22px;
      height: 22px;
      color: var(--primary);
    }

    .category-header h2 {
      margin: 0;
      font-size: 1.1rem;
      color: var(--primary);
    }

    .document-list {
      padding: 0.5rem;
    }

    .document-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      border-radius: 8px;
      transition: background 0.2s;
    }

    .document-item:hover {
      background: var(--surface);
    }

    .document-link {
      text-decoration: none;
      color: inherit;
      cursor: pointer;
    }

    .document-link:hover .document-name {
      color: var(--primary);
    }

    .document-arrow {
      color: var(--text-light);
      flex-shrink: 0;
    }

    .document-link:hover .document-arrow {
      color: var(--primary);
    }

    .document-placeholder {
      opacity: 0.6;
    }

    .document-icon {
      width: 40px;
      height: 40px;
      background: var(--primary-light);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .document-icon svg {
      width: 20px;
      height: 20px;
      color: var(--primary);
    }

    .document-info {
      flex: 1;
      min-width: 0;
    }

    .document-name {
      display: block;
      font-weight: 500;
      font-size: 0.95rem;
      margin-bottom: 0.25rem;
    }

    .document-meta {
      font-size: 0.85rem;
      color: var(--text-light);
    }

    .document-download {
      width: 40px;
      height: 40px;
      border: 1px solid var(--border);
      border-radius: 8px;
      background: var(--white);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.2s;
      flex-shrink: 0;
    }

    .document-download:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .document-download:not(:disabled):hover {
      background: var(--primary);
      border-color: var(--primary);
      color: white;
    }

    .document-download svg {
      width: 18px;
      height: 18px;
    }

    .documents-note {
      display: flex;
      gap: 1rem;
      background: #fef3c7;
      border: 1px solid #f59e0b;
      border-radius: 16px;
      padding: 1.5rem;
    }

    .documents-note > svg {
      width: 24px;
      height: 24px;
      color: #b45309;
      flex-shrink: 0;
      margin-top: 2px;
    }

    .documents-note p {
      margin: 0 0 0.5rem 0;
      font-size: 0.95rem;
      color: #a16207;
    }

    .documents-note a {
      color: #92400e;
      font-weight: 500;
    }
  </style>
</MemberLayout>
