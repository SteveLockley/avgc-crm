---
import PublicLayout from '../layouts/PublicLayout.astro';

// Course images
const heroImage = '/images/hero-course.jpg';
const courseImage = '/images/course-links.jpg';
const clubhouseImage = '/images/clubhouse.jpg';
---

<PublicLayout
  title="Membership"
  description="Join Alnmouth Village Golf Club. Explore our membership options, benefits, and become part of our welcoming golfing community."
  heroImage={heroImage}
  heroTitle="Membership"
  heroSubtitle="Join our welcoming golfing community"
  heroSize="large"
  heroOverlay="medium"
>
  <div class="content">
    <!-- Intro -->
    <section class="section intro-section">
      <div class="intro-grid">
        <div class="intro-content">
          <span class="intro-label">Join Us</span>
          <h2 class="section-title">Become a Member</h2>
          <p class="intro-text">
            Joining Alnmouth Village Golf Club means becoming part of a friendly, welcoming community
            of golfers. Our members enjoy unlimited access to one of Northumberland's finest links courses,
            a warm clubhouse atmosphere, and a full calendar of competitions and social events.
          </p>
          <p class="intro-text">
            Whether you're a seasoned golfer or just starting out, we have membership options to suit
            your lifestyle and budget.
          </p>
          <a href="/contact?enquiry=membership" class="btn btn-primary btn-large">Enquire Now</a>
        </div>
        <div class="intro-image">
          <img src={clubhouseImage} alt="Alnmouth Village Golf Club clubhouse" loading="lazy" />
        </div>
      </div>
    </section>

    <!-- Membership Categories -->
    <section class="section categories-section">
