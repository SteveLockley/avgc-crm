      align-items: center;
    }

    @media (min-width: 900px) {
      .intro-grid {
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
      }
    }

    .intro-label {
      display: inline-block;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--primary);
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .intro-content .section-title {
      margin-bottom: 1.5rem;
    }

    .intro-text {
      color: var(--text-light);
      font-size: 1.05rem;
      line-height: 1.8;
      margin-bottom: 1rem;
    }

    .intro-content .btn {
